import { Router } from 'express';
import { requireAuth, requireAdmin } from '../middleware/auth.js';
import { debugPageRoutes } from '../controllers/debugPagesController.js';
import { fixPageTemplates } from '../services/pageTemplateFixer.js';

const router = Router();

router.get('/routes', requireAuth, requireAdmin, debugPageRoutes);
router.post('/fix-templates', requireAuth, requireAdmin, async (req, res) => {
  try {
    const result = await fixPageTemplates(req);
    res.json(result);
  } catch (err) {
    res.status(500).json({ error: err.message });
  }
});

export default router;