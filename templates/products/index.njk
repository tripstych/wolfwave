{% extends "layouts/base.njk" %}

{% block content %}
<div class="products-index container mx-auto px-4 py-8">
  <div class="flex flex-col md:flex-row gap-8">
    
    {# Sidebar Filters #}
    <aside class="w-full md:w-64 flex-shrink-0">
      <div class="bg-white p-6 rounded-lg border border-gray-200 sticky top-24">
        <h2 class="font-bold text-lg mb-4">Filter Products</h2>
        
        <form action="/products" method="GET" class="space-y-6">
          {# Sort By #}
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Sort By</label>
            <select name="sort" class="w-full border-gray-300 rounded-md shadow-sm focus:border-primary-500 focus:ring-primary-500" onchange="this.form.submit()">
              <option value="title" {% if filters.sort == 'title' %}selected{% endif %}>Alphabetical</option>
              <option value="price" {% if filters.sort == 'price' and filters.order != 'desc' %}selected{% endif %}>Price: Low to High</option>
              <option value="price" data-order="desc" {% if filters.sort == 'price' and filters.order == 'desc' %}selected{% endif %}>Price: High to Low</option>
            </select>
            {# Hidden order field updated by JS for the 'High to Low' option #}
            <input type="hidden" name="order" id="sort-order" value="{{ filters.order or 'asc' }}">
          </div>

          {# Price Range #}
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Price Range</label>
            <div class="flex gap-2">
              <input type="number" name="min_price" value="{{ filters.min_price }}" placeholder="Min" class="w-full border-gray-300 rounded-md shadow-sm text-sm" />
              <input type="number" name="max_price" value="{{ filters.max_price }}" placeholder="Max" class="w-full border-gray-300 rounded-md shadow-sm text-sm" />
            </div>
          </div>

          <button type="submit" class="w-full btn btn-primary py-2 text-sm">
            Apply Filters
          </button>

          {% if filters.sort or filters.min_price or filters.max_price %}
            <a href="/products" class="block text-center text-sm text-gray-500 hover:text-red-600 underline">
              Clear All
            </a>
          {% endif %}
        </form>
      </div>
    </aside>

    {# Product Grid #}
    <div class="flex-1">
      <div class="flex items-center justify-between mb-6">
        <h1 class="text-2xl font-bold text-gray-900">Our Products</h1>
        <p class="text-sm text-gray-500">{{ content.length }} results</p>
      </div>

      {% if content.length > 0 %}
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {% for item in content %}
            {% set productData = item.data | json %}
            <div class="product-card group bg-white border border-gray-200 rounded-xl overflow-hidden hover:shadow-lg transition-shadow">
              <a href="{{ item.slug }}" class="block aspect-square bg-gray-100 relative overflow-hidden">
                {% if productData.og_image %}
                  <img src="{{ productData.og_image }}" alt="{{ item.title }}" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" />
                {% else %}
                  <div class="w-full h-full flex items-center justify-center text-gray-400">
                    <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.581-1.581a2 2 0 012.828 0L20 24M14 4h6m0 0v6m0-6L10 14"></path></svg>
                  </div>
                {% endif %}
              </a>
              <div class="p-4">
                <h3 class="font-bold text-gray-900 group-hover:text-primary-600 mb-1">
                  <a href="{{ item.slug }}">{{ item.title or 'Untitled' }}</a>
                </h3>
                <div class="flex items-center justify-between">
                  <span class="text-lg font-bold text-gray-900">${{ (item.price or 0) | round(2) }}</span>
                  {% if item.inventory_quantity > 0 %}
                    <span class="text-[10px] text-green-600 font-bold uppercase tracking-wider">In Stock</span>
                  {% else %}
                    <span class="text-[10px] text-red-500 font-bold uppercase tracking-wider">Out of Stock</span>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      {% else %}
        <div class="bg-white border border-gray-200 rounded-lg p-12 text-center">
          <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 9.172a4 4 0 012.828 0M12 14v4m0 0v4m0-4h4m-4 0H8m12 0a8 8 0 11-16 0 8 8 0 0116 0z"></path></svg>
          <p class="text-gray-600">No products match your filters.</p>
          <a href="/products" class="text-primary-600 underline mt-2 inline-block">View all products</a>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<script>
  // Handle high-to-low logic for the sort dropdown
  const sortSelect = document.querySelector('select[name="sort"]');
  const orderInput = document.getElementById('sort-order');
  
  if (sortSelect && orderInput) {
    sortSelect.addEventListener('change', (e) => {
      const selectedOption = e.target.options[e.target.selectedIndex];
      if (selectedOption.getAttribute('data-order') === 'desc') {
        orderInput.value = 'desc';
      } else {
        orderInput.value = 'asc';
      }
    });
  }
</script>
{% endblock %}
