{% extends "layouts/base.njk" %}

{% block title %}{{ page.meta_title or content.title }}{% endblock %}
{% block description %}{{ page.meta_description or '' }}{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    
    {% if content.title %}
    <h1 class="text-4xl font-bold text-gray-900 mb-6">{{ content.title }}</h1>
    {% endif %}
    
    {% if page.content %}
    <div class="prose prose-lg max-w-none">
      {{ page.content | safe }}
    </div>
    {% endif %}
    
    {% if content.data %}
    <div class="prose prose-lg max-w-none">
      {{ content.data.content | safe }}
    </div>
    {% endif %}
    
  </div>
</div>
{% endblock %}