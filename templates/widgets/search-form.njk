<div class="search-widget" style="padding: 1.5rem; background: #f9fafb; border: 1px solid #e5e7eb; border-radius: 0.75rem;">
  <form action="/search" method="GET" class="space-y-3">
    <label class="block text-sm font-bold text-gray-700 uppercase tracking-wider" 
           data-cms-region="widget_title" 
           data-cms-type="text" 
           data-cms-label="Widget Title">
      {{ content.widget_title | default('Search Site') }}
    </label>
    
    <div class="flex gap-2">
      <input 
        type="text" 
        name="q" 
        placeholder="{{ content.placeholder | default('Search...') }}" 
        class="flex-1 px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none"
        data-cms-region="placeholder"
        data-cms-type="text"
        data-cms-label="Input Placeholder"
      />
      <button type="submit" class="bg-primary-600 text-white px-4 py-2 rounded-md hover:bg-primary-700 transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
      </button>
    </div>
  </form>
</div>
