{% extends "layouts/base.njk" %}

{% block styles %}
.contact-hero {
  padding: 8rem 0;
  background: white;
  text-align: center;
}

.contact-hero h1 { font-size: 3.5rem; margin-bottom: 1.5rem; }
.contact-hero p { font-size: 1.25rem; color: var(--color-text-muted); max-width: 700px; margin: 0 auto; }

.contact-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 6rem;
  padding-bottom: 8rem;
}

.contact-info {
  background: var(--color-surface);
  padding: 3.5rem;
  border-radius: 1rem;
}

.info-item { display: flex; align-items: flex-start; gap: 1.5rem; margin-bottom: 2.5rem; }
.info-item .icon { font-size: 1.5rem; color: var(--color-primary); }
.info-item h4 { font-size: 1.125rem; margin-bottom: 0.5rem; }
.info-item p { font-size: 1rem; color: var(--color-text-muted); margin-bottom: 0; }

.contact-form-area {
  padding: 1rem 0;
}

.map-placeholder {
  width: 100%;
  aspect-ratio: 16/9;
  background: #eee;
  border-radius: 1rem;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.25rem;
  color: #999;
  margin-top: 4rem;
  border: 1px solid var(--color-border);
}

@media (max-width: 991px) {
  .contact-grid { grid-template-columns: 1fr; gap: 4rem; }
  .contact-info { padding: 2rem; }
}
{% endblock %}

{% block content %}
<section class="contact-hero">
  <div class="container">
    <h1 data-cms-region="page_title" data-cms-type="text" data-cms-label="Page Title">
      {{ content.page_title | default("Get in Touch") }}
    </h1>
    <p data-cms-region="intro_text" data-cms-type="textarea" data-cms-label="Intro Text">
      {{ content.intro_text | default("Whether you have a question about our services, pricing, or anything else, our team is ready to answer all your questions.") }}
    </p>
  </div>
</section>

<div class="container">
  <div class="contact-grid">
    <div class="contact-info">
      <h3>Contact Information</h3>
      <p class="mb-4">Feel free to reach out to us via any of the channels below.</p>
      
      <div data-cms-region="contact_details" 
           data-cms-type="repeater" 
           data-cms-label="Contact Details"
           data-cms-fields='[{"name":"icon","type":"text","label":"Icon (Emoji)"},{"name":"label","type":"text","label":"Label"},{"name":"value","type":"textarea","label":"Value"}]'>
        {% for info in content.contact_details %}
          <div class="info-item">
            <div class="icon">{{ info.icon }}</div>
            <div class="info-content">
              <h4>{{ info.label }}</h4>
              <p>{{ info.value | nl2br | safe }}</p>
            </div>
          </div>
        {% else %}
          <div class="info-item"><div class="icon">üìç</div><div class="info-content"><h4>Our Office</h4><p>123 Business Ave, Suite 456<br>San Francisco, CA 94107</p></div></div>
          <div class="info-item"><div class="icon">üìû</div><div class="info-content"><h4>Call Us</h4><p>+1 (555) 000-0000</p></div></div>
          <div class="info-item"><div class="icon">üìß</div><div class="info-content"><h4>Email Us</h4><p>contact@webwolf.com</p></div></div>
        {% endfor %}
      </div>
    </div>
    
    <div class="contact-form-area">
      <h3>Send us a Message</h3>
      <div data-cms-region="form_placeholder" data-cms-type="richtext" data-cms-label="Form Area">
        {{ content.form_placeholder | safe | default("<p>Contact form will be embedded here via our form builder or third-party service.</p>") }}
      </div>
    </div>
  </div>
  
  <div class="map-placeholder">
    Interactive Map Placeholder
  </div>
</div>
{% endblock %}

