{% extends "layouts/base.njk" %}

{% block styles %}
.hero-minimal {
  padding: 8rem 0 4rem;
  background: white;
}

.hero-minimal .container {
  max-width: 900px;
}

.hero-minimal h1 {
  font-size: 4.5rem;
  letter-spacing: -0.04em;
  margin-bottom: 2rem;
  line-height: 1;
}

.hero-minimal .accent-line {
  width: 80px;
  height: 2px;
  background: var(--color-primary);
  margin-bottom: 3rem;
}

.hero-minimal p {
  font-size: 1.5rem;
  color: var(--color-text-muted);
  line-height: 1.6;
  margin-bottom: 3rem;
  max-width: 700px;
}

.page-body {
  padding: 4rem 0 8rem;
}

@media (max-width: 768px) {
  .hero-minimal { padding-top: 5rem; }
  .hero-minimal h1 { font-size: 3rem; }
  .hero-minimal p { font-size: 1.25rem; }
}
{% endblock %}

{% block content %}
<section class="hero-minimal">
  <div class="container">
    <h1 data-cms-region="headline" data-cms-type="text" data-cms-label="Hero Title">
      {{ content.headline | default("Elegance in Simplicity") }}
    </h1>
    <div class="accent-line" data-cms-region="accent_color" data-cms-type="color" data-cms-label="Accent Line Color"></div>
    <p data-cms-region="subtext" data-cms-type="textarea" data-cms-label="Hero Subtitle">
      {{ content.subtext | default("A minimal layout designed to emphasize your message with clarity and space.") }}
    </p>
    <div data-cms-region="hero_cta" data-cms-type="link" data-cms-label="Hero CTA">
      <a href="{{ content.hero_cta.url | default('#') }}" class="btn btn-primary btn-lg">
        {{ content.hero_cta.text | default("Start Now") }}
      </a>
    </div>
  </div>
</section>

<section class="page-body">
  <div class="container">
    <article data-cms-region="main_content" data-cms-type="richtext" data-cms-label="Main Content">
      {{ content.main_content | safe | default("<p>Add your main page content here.</p>") }}
    </article>
  </div>
</section>
{% endblock %}

