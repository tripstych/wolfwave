{% extends "layouts/base.njk" %}

{% block styles %}
.about-hero {
  padding: 8rem 0;
  background: var(--color-surface);
  text-align: center;
}

.about-hero h1 { font-size: 3.5rem; margin-bottom: 1.5rem; }
.about-hero p { font-size: 1.25rem; color: var(--color-text-muted); max-width: 700px; margin: 0 auto; }

.team-section {
  padding: 8rem 0;
}

.team-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 4rem;
  margin-top: 4rem;
}

.team-card { text-align: center; }
.team-card img { width: 100%; aspect-ratio: 1; border-radius: 1rem; object-fit: cover; margin-bottom: 1.5rem; }
.team-card h3 { font-size: 1.5rem; margin-bottom: 0.25rem; }
.team-card span { display: block; font-size: 0.875rem; color: var(--color-primary); font-weight: 700; text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 1rem; }
.team-card p { font-size: 0.875rem; color: var(--color-text-muted); line-height: 1.6; }

.values-section {
  padding: 8rem 0;
  background: white;
}

.values-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 4rem;
  margin-top: 4rem;
}

.value-item h4 { font-size: 1.25rem; margin-bottom: 1rem; }
.value-item p { color: var(--color-text-muted); }

@media (max-width: 991px) {
  .team-grid { grid-template-columns: repeat(2, 1fr); gap: 3rem; }
  .values-grid { grid-template-columns: 1fr; gap: 3rem; }
}

@media (max-width: 768px) {
  .team-grid { grid-template-columns: 1fr; }
}
{% endblock %}

{% block content %}
<section class="about-hero">
  <div class="container">
    <h1 data-cms-region="page_title" data-cms-type="text" data-cms-label="Page Title">
      {{ content.page_title | default("Meet the Team") }}
    </h1>
    <p data-cms-region="intro_text" data-cms-type="textarea" data-cms-label="Intro Text">
      {{ content.intro_text | default("Behind every project is a group of dedicated professionals committed to excellence.") }}
    </p>
  </div>
</section>

<div class="container team-section">
  <div class="team-grid" 
       data-cms-region="team_members" 
       data-cms-type="repeater" 
       data-cms-label="Team Members"
       data-cms-fields='[{"name":"name","type":"text","label":"Name"},{"name":"role","type":"text","label":"Role"},{"name":"bio","type":"textarea","label":"Bio"},{"name":"photo","type":"image","label":"Photo"}]'>
    {% for member in content.team_members %}
      <div class="team-card">
        <img src="{{ member.photo | default('/images/placeholders/600x600.svg') }}" alt="{{ member.name }}">
        <h3>{{ member.name }}</h3>
        <span>{{ member.role }}</span>
        <p>{{ member.bio }}</p>
      </div>
    {% else %}
      <div class="team-card"><img src="/images/placeholders/600x600.svg" alt="Team Member"><h3>Johnathan Smith</h3><span>Founder & CEO</span><p>Visionary leader with 15+ years experience.</p></div>
      <div class="team-card"><img src="/images/placeholders/600x600.svg" alt="Team Member"><h3>Sarah Williams</h3><span>Lead Designer</span><p>Expert in UI/UX and visual storytelling.</p></div>
      <div class="team-card"><img src="/images/placeholders/600x600.svg" alt="Team Member"><h3>Michael Chang</h3><span>Head of Engineering</span><p>Dedicated to scalable and efficient software systems.</p></div>
    {% endfor %}
  </div>
</div>

<section class="values-section">
  <div class="container">
    <h2 class="text-center">Our Core Values</h2>
    <div class="values-grid" 
         data-cms-region="values" 
         data-cms-type="repeater" 
         data-cms-label="Our Values"
         data-cms-fields='[{"name":"title","type":"text","label":"Value Title"},{"name":"text","type":"textarea","label":"Value Description"}]'>
      {% for value in content.values %}
        <div class="value-item">
          <h4>{{ value.title }}</h4>
          <p>{{ value.text }}</p>
        </div>
      {% else %}
        <div class="value-item"><h4>Integrity</h4><p>We believe in honest and transparent relationships with all our clients and partners.</p></div>
        <div class="value-item"><h4>Innovation</h4><p>Constantly seeking new ways to solve complex problems through creative thinking.</p></div>
        <div class="value-item"><h4>Excellence</h4><p>We strive for the highest quality in everything we build and deliver.</p></div>
      {% endfor %}
    </div>
  </div>
</section>
{% endblock %}

