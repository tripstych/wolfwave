{% extends "layouts/base.njk" %}

{% block styles %}
.page-header {
  padding: 4rem 0;
  background: white;
  border-bottom: 1px solid var(--color-border);
}

.page-header h1 {
  font-size: 3rem;
  margin-bottom: 0;
}

.page-grid {
  display: grid;
  grid-template-columns: 1fr 340px;
  gap: 4rem;
  padding: 4rem 0 8rem;
}

.page-body {
  font-size: 1.125rem;
  line-height: 1.8;
}

.cta-sidebar {
  background: var(--color-surface);
  padding: 2rem;
  border-radius: 1rem;
  border: 1px solid var(--color-border);
  position: sticky;
  top: calc(var(--header-height) + 2rem);
  height: fit-content;
  text-align: center;
}

.cta-sidebar h3 {
  font-size: 1.5rem;
  margin-bottom: 1rem;
}

.cta-sidebar p {
  font-size: 1rem;
  margin-bottom: 1.5rem;
  color: var(--color-text-muted);
}

.cta-sidebar .btn-cta {
  display: block;
  width: 100%;
  padding: 0.75rem;
  margin-bottom: 1rem;
  font-weight: 600;
  border-radius: 0.5rem;
}

.cta-sidebar .secondary-link {
  font-size: 0.875rem;
  color: var(--color-text-muted);
}

@media (max-width: 991px) {
  .page-grid { grid-template-columns: 1fr; }
  .cta-sidebar { position: static; margin-top: 3rem; }
}
{% endblock %}

{% block content %}
<header class="page-header">
  <div class="container">
    <h1 data-cms-region="page_title" data-cms-type="text" data-cms-label="Page Title">
      {{ content.page_title | default(page.title) }}
    </h1>
  </div>
</header>

<div class="container">
  <div class="page-grid">
    <article class="page-body" data-cms-region="main_content" data-cms-type="richtext" data-cms-label="Main Content">
      {{ content.main_content | safe | default("<p>The main article content flows here. This layout is perfect for detailed information where you want the call to action always visible as the user scrolls.</p><h2>Detailed Section</h2><p>Provide the meat of your message here. The sidebar will stay sticky for most of the reading experience.</p>") }}
    </article>
    
    <aside class="cta-sidebar">
      <h3 data-cms-region="sidebar_title" data-cms-type="text" data-cms-label="Sidebar Title">
        {{ content.sidebar_title | default("Ready to Begin?") }}
      </h3>
      <p data-cms-region="sidebar_text" data-cms-type="textarea" data-cms-label="Sidebar Text">
        {{ content.sidebar_text | default("Start your 14-day free trial today. No credit card required.") }}
      </p>
      <div data-cms-region="sidebar_primary_cta" data-cms-type="link" data-cms-label="Primary CTA">
        <a href="{{ content.sidebar_primary_cta.url | default('#') }}" class="btn-cta btn-primary">
          {{ content.sidebar_primary_cta.text | default("Get Started Now") }}
        </a>
      </div>
      <div data-cms-region="sidebar_secondary_cta" data-cms-type="link" data-cms-label="Secondary CTA">
        <a href="{{ content.sidebar_secondary_cta.url | default('#') }}" class="secondary-link">
          {{ content.sidebar_secondary_cta.text | default("View All Pricing") }}
        </a>
      </div>
    </aside>
  </div>
</div>
{% endblock %}

