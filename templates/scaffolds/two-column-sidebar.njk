{% extends "layouts/base.njk" %}

{% block styles %}
.page-header {
  padding: 4rem 0 2rem;
  background: var(--color-background);
  border-bottom: 1px solid var(--color-border);
}

.page-header h1 {
  font-size: 2.5rem;
}

.page-grid {
  display: grid;
  grid-template-columns: 1fr 300px;
  gap: 4rem;
  padding: 4rem 0 8rem;
}

.main-content {
  font-size: 1.125rem;
  line-height: 1.8;
}

.main-content h2 {
  font-size: 2rem;
  margin-top: 2rem;
}

.sidebar {
  background: var(--color-surface);
  padding: 2rem;
  border-radius: 1rem;
  height: fit-content;
}

.sidebar h3 {
  font-size: 1.25rem;
  margin-bottom: 1rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--color-text-muted);
}

.sidebar ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.sidebar li {
  padding: 0.75rem 0;
  border-bottom: 1px solid var(--color-border);
}

.sidebar li:last-child {
  border-bottom: none;
}

@media (max-width: 991px) {
  .page-grid { grid-template-columns: 1fr; }
  .sidebar { order: -1; }
}
{% endblock %}

{% block content %}
<header class="page-header">
  <div class="container">
    <h1 data-cms-region="page_title" data-cms-type="text" data-cms-label="Page Title">
      {{ content.page_title | default(page.title) }}
    </h1>
  </div>
</header>

<div class="container">
  <div class="page-grid">
    <article class="main-content" data-cms-region="main_content" data-cms-type="richtext" data-cms-label="Main Content">
      {{ content.main_content | safe | default("<p>The primary information goes here in the wider column. This layout is standard for blogs, documentation, and feature pages where extra context is needed in a sidebar.</p><h2>Section One</h2><p>Provide detailed explanations here. This is the main reading area for your audience.</p>") }}
    </article>
    
    <aside class="sidebar">
      <h3 data-cms-region="sidebar_title" data-cms-type="text" data-cms-label="Sidebar Title">
        {{ content.sidebar_title | default("Related Info") }}
      </h3>
      <div data-cms-region="sidebar_content" data-cms-type="richtext" data-cms-label="Sidebar Content">
        {{ content.sidebar_content | safe | default("<ul><li>Link to more info</li><li>Another related item</li><li>Additional resources</li></ul>") }}
      </div>
    </aside>
  </div>
</div>
{% endblock %}

