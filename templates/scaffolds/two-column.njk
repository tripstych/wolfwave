{% extends "layouts/base.njk" %}

{% block styles %}
.page-header {
  padding: 5rem 0 3rem;
  background: var(--color-background);
}

.page-header h1 {
  font-size: 3rem;
  text-align: center;
}

.two-column-layout {
  padding: 4rem 0 8rem;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
}

.column h2 {
  font-size: 1.75rem;
  margin-bottom: 1.5rem;
}

.column article {
  font-size: 1.125rem;
  line-height: 1.8;
}

@media (max-width: 991px) {
  .two-column-layout {
    grid-template-columns: 1fr;
    gap: 3rem;
  }
}
{% endblock %}

{% block content %}
<header class="page-header">
  <div class="container">
    <h1 data-cms-region="page_title" data-cms-type="text" data-cms-label="Page Title">
      {{ content.page_title | default(page.title) }}
    </h1>
  </div>
</header>

<div class="container">
  <section class="two-column-layout">
    <div class="column left">
      <h2 data-cms-region="left_col_title" data-cms-type="text" data-cms-label="Left Column Title">
        {{ content.left_col_title | default("Column One") }}
      </h2>
      <article data-cms-region="left_col_content" data-cms-type="richtext" data-cms-label="Left Column Content">
        {{ content.left_col_content | safe | default("<p>Content for the left column goes here. This layout is excellent for side-by-side comparisons or complex information that needs to be digested in separate but related parts.</p>") }}
      </article>
    </div>
    
    <div class="column right">
      <h2 data-cms-region="right_col_title" data-cms-type="text" data-cms-label="Right Column Title">
        {{ content.right_col_title | default("Column Two") }}
      </h2>
      <article data-cms-region="right_col_content" data-cms-type="richtext" data-cms-label="Right Column Content">
        {{ content.right_col_content | safe | default("<p>Content for the right column goes here. Maintain a balanced amount of text in both columns for a clean look.</p>") }}
      </article>
    </div>
  </section>
</div>
{% endblock %}

