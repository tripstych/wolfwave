{% extends "layouts/base.njk" %}

{% block styles %}
.saas-hero {
  padding: 8rem 0;
  text-align: center;
  background: var(--color-surface);
}

.saas-hero h1 { font-size: 4rem; margin-bottom: 1.5rem; }
.saas-hero p { font-size: 1.5rem; color: var(--color-text-muted); max-width: 800px; margin: 0 auto 3rem; }

.features-grid {
  padding: 6rem 0;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 3rem;
}

.feature-card { text-align: center; padding: 2rem; border-radius: 1rem; background: white; border: 1px solid var(--color-border); }
.feature-icon { font-size: 2.5rem; margin-bottom: 1rem; color: var(--color-primary); }

.pricing-section {
  padding: 6rem 0;
  background: white;
  text-align: center;
}

.pricing-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 2rem;
  margin-top: 4rem;
}

.pricing-card {
  padding: 3rem 2rem;
  border: 1px solid var(--color-border);
  border-radius: 1rem;
  background: white;
  transition: transform 0.2s;
}

.pricing-card.popular {
  border: 2px solid var(--color-primary);
  transform: scale(1.05);
  box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
}

.price { font-size: 3.5rem; font-weight: 700; margin: 1.5rem 0; }
.price span { font-size: 1rem; color: var(--color-text-muted); }

.testimonials {
  padding: 6rem 0;
  background: var(--color-surface);
  text-align: center;
}

.testimonial-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 2rem;
  margin-top: 4rem;
}

.testimonial-card {
  padding: 2rem;
  background: white;
  border-radius: 1rem;
  text-align: left;
}

.testimonial-card blockquote { font-style: italic; margin-bottom: 1.5rem; color: var(--color-text-muted); }
.author { display: flex; align-items: center; gap: 1rem; }
.author img { width: 48px; height: 48px; border-radius: 50%; }

@media (max-width: 991px) {
  .features-grid, .pricing-grid, .testimonial-grid { grid-template-columns: 1fr; }
  .pricing-card.popular { transform: none; }
}
{% endblock %}

{% block content %}
<section class="saas-hero">
  <div class="container">
    <h1 data-cms-region="headline" data-cms-type="text" data-cms-label="Hero Title">
      {{ content.headline | default("Scale Faster Than Ever") }}
    </h1>
    <p data-cms-region="subtext" data-cms-type="textarea" data-cms-label="Hero Subtitle">
      {{ content.subtext | default("Automate your entire workflow with our industry-leading cloud platform.") }}
    </p>
    <a href="#" class="btn btn-primary btn-lg">Start Free Trial</a>
  </div>
</section>

<section class="container features-grid" 
         data-cms-region="features" 
         data-cms-type="repeater" 
         data-cms-label="Features"
         data-cms-fields='[{"name":"icon","type":"text","label":"Icon (Emoji)"},{"name":"title","type":"text","label":"Feature Title"},{"name":"text","type":"textarea","label":"Feature Text"}]'>
  {% for item in content.features %}
    <div class="feature-card">
      <div class="feature-icon">{{ item.icon }}</div>
      <h3>{{ item.title }}</h3>
      <p>{{ item.text }}</p>
    </div>
  {% else %}
    <div class="feature-card"><div class="feature-icon">üöÄ</div><h3>High Performance</h3><p>Optimized for speed and efficiency at every level.</p></div>
    <div class="feature-card"><div class="feature-icon">üîí</div><h3>Military Grade Security</h3><p>Your data is encrypted with the highest standards.</p></div>
    <div class="feature-card"><div class="feature-icon">‚òÅÔ∏è</div><h3>Cloud-Native</h3><p>Built from the ground up to thrive in the cloud.</p></div>
  {% endfor %}
</section>

<section class="pricing-section">
  <div class="container">
    <h2>Simple, Transparent Pricing</h2>
    <div class="pricing-grid" 
         data-cms-region="pricing" 
         data-cms-type="repeater" 
         data-cms-label="Pricing Plans"
         data-cms-fields='[{"name":"plan","type":"text","label":"Plan Name"},{"name":"price","type":"text","label":"Price"},{"name":"features","type":"richtext","label":"Features List"},{"name":"is_popular","type":"text","label":"Is Popular? (true/false)"}]'>
      {% for plan in content.pricing %}
        <div class="pricing-card {% if plan.is_popular == 'true' %}popular{% endif %}">
          <h3>{{ plan.plan }}</h3>
          <div class="price">${{ plan.price }}<span>/mo</span></div>
          <div class="pricing-features">{{ plan.features | safe }}</div>
          <a href="#" class="btn btn-primary mt-4">Choose Plan</a>
        </div>
      {% else %}
        <div class="pricing-card"><h3>Basic</h3><div class="price">$29<span>/mo</span></div><p>Up to 5 users. Basic features included.</p></div>
        <div class="pricing-card popular"><h3>Pro</h3><div class="price">$79<span>/mo</span></div><p>Unlimited users. All pro features included.</p></div>
        <div class="pricing-card"><h3>Enterprise</h3><div class="price">$199<span>/mo</span></div><p>Custom solutions and dedicated support.</p></div>
      {% endfor %}
    </div>
  </div>
</section>

<section class="testimonials">
  <div class="container">
    <h2>Trusted by Innovative Teams</h2>
    <div class="testimonial-grid" 
         data-cms-region="testimonials" 
         data-cms-type="repeater" 
         data-cms-label="Testimonials"
         data-cms-fields='[{"name":"name","type":"text","label":"Name"},{"name":"role","type":"text","label":"Role"},{"name":"quote","type":"textarea","label":"Quote"},{"name":"photo","type":"image","label":"Photo"}]'>
      {% for t in content.testimonials %}
        <div class="testimonial-card">
          <blockquote>"{{ t.quote }}"</blockquote>
          <div class="author">
            <img src="{{ t.photo | default('/images/placeholders/64x64.svg') }}" alt="{{ t.name }}">
            <div><strong>{{ t.name }}</strong><br><span>{{ t.role }}</span></div>
          </div>
        </div>
      {% else %}
        <div class="testimonial-card"><blockquote>"This tool has transformed how our team works."</blockquote><div class="author"><strong>Jane Doe</strong><br><span>CTO at TechCorp</span></div></div>
        <div class="testimonial-card"><blockquote>"The easiest platform to scale your infrastructure."</blockquote><div class="author"><strong>John Smith</strong><br><span>Founder at StartupX</span></div></div>
        <div class="testimonial-card"><blockquote>"We saved 30% on our operational costs within the first month."</blockquote><div class="author"><strong>Sarah Jones</strong><br><span>VP of Engineering</span></div></div>
      {% endfor %}
    </div>
  </div>
</section>

<section class="container py-8 text-center" style="padding: 6rem 0;">
  <h2 data-cms-region="bottom_cta_title" data-cms-type="text">{{ content.bottom_cta_title | default("Start Scaling Today") }}</h2>
  <a href="#" class="btn btn-primary btn-lg mt-4">Get Started for Free</a>
</section>
{% endblock %}

