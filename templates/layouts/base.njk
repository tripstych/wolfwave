<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  {# SEO Meta Tags #}
  <title>{{ seo.title }} | {{ site.site_name }}</title>
  <meta name="description" content="{{ seo.description }}">
  <meta name="robots" content="{{ seo.robots }}">
  <link rel="canonical" href="{{ seo.canonical }}">
  
  {# Open Graph #}
  <meta property="og:type" content="{{ seo.og.type }}">
  <meta property="og:title" content="{{ seo.og.title }}">
  <meta property="og:description" content="{{ seo.og.description }}">
  <meta property="og:url" content="{{ seo.og.url }}">
  {% if seo.og.image %}
  <meta property="og:image" content="{{ seo.og.image }}">
  {% endif %}
  <meta property="og:site_name" content="{{ site.site_name }}">
  
  {# Twitter Card #}
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ seo.og.title }}">
  <meta name="twitter:description" content="{{ seo.og.description }}">
  {% if seo.og.image %}
  <meta name="twitter:image" content="{{ seo.og.image }}">
  {% endif %}
  
  {# Schema.org JSON-LD #}
  {% if seo.schema %}
  <script type="application/ld+json">
    {{ seo.schema | dump | safe }}
  </script>
  {% endif %}
  
  {# Google Analytics #}
  {% if site.google_analytics_id %}
  <script async src="https://www.googletagmanager.com/gtag/js?id={{ site.google_analytics_id }}"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', '{{ site.google_analytics_id }}');
  </script>
  {% endif %}
  
  {# Styles #}
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  {% if template.options.google_font_body or template.options.google_font_heading %}
    <link href="https://fonts.googleapis.com/css2?family={{ (template.options.google_font_body or 'Inter') | replace(' ', '+') }}:wght@400;500;600;700&{% if template.options.google_font_heading and template.options.google_font_heading != template.options.google_font_body %}family={{ template.options.google_font_heading | replace(' ', '+') }}:wght@400;500;600;700&{% endif %}display=swap" rel="stylesheet">
  {% else %}
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  {% endif %}
  
  <style>
    *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
    
    :root {
      --cms-primary-color: {{ template.options.primary_color | default('#2563eb') }};
      --cms-primary-dark-color: {{ template.options.primary_dark_color | default('#1d4ed8') }};
      --cms-secondary-color: {{ template.options.secondary_color | default('#64748b') }};
      --cms-color-background: #ffffff;
      --cms-color-surface: #f8fafc;
      --cms-color-text: {{ template.options.body_color | default('#1e293b') }};
      --cms-color-border: #e2e8f0;
      
      {# Font Families #}
      --cms-font-body: {% if template.options.google_font_body %}"{{ template.options.google_font_body }}", sans-serif{% else %}"Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif{% endif %};
      --cms-font-heading: {% if template.options.google_font_heading %}"{{ template.options.google_font_heading }}", sans-serif{% elif template.options.google_font_body %}"{{ template.options.google_font_body }}", sans-serif{% else %}var(--cms-font-body){% endif %};
      
      --cms-base-font-size: {{ template.options.body_size | default('16px') }};
      --cms-max-width: {{ template.options.container_width | default('1200px') }};
      --header-height: 72px;
      
      --h1-size: {{ template.options.h1_size | default('2.5rem') }};
      --h1-color: {{ template.options.h1_color | default('#0f172a') }};
      --h1-weight: {{ template.options.h1_weight | default('700') }};
      --h2-size: {{ template.options.h2_size | default('2rem') }};
      --h2-color: {{ template.options.h2_color | default('#0f172a') }};
      --h2-weight: {{ template.options.h2_weight | default('700') }};
      
      --h3-size: {{ template.options.h3_size | default('1.5rem') }};
      --h3-color: {{ template.options.h3_color | default('#0f172a') }};
      --h3-weight: {{ template.options.h3_weight | default('600') }};
      
      --p-size: {{ template.options.p_size | default('1rem') }};
      --p-color: {{ template.options.p_color | default('#1e293b') }};
      --link-color: {{ template.options.link_color | default('#2563eb') }};
    }
    
    html { scroll-behavior: smooth; }
    
    body {
      font-family: var(--cms-font-body);
      font-size: var(--cms-base-font-size);
      line-height: 1.6;
      color: var(--cms-color-text);
      background: var(--cms-color-background);
    }

    h1, h2, h3 {
      font-family: var(--cms-font-heading);
    }

    h1 {
      font-size: var(--h1-size);
      color: var(--h1-color);
      font-weight: var(--h1-weight);
      line-height: 1.2;
      margin-bottom: 1.5rem;
    }

    h2 {
      font-size: var(--h2-size);
      color: var(--h2-color);
      font-weight: var(--h2-weight);
      line-height: 1.3;
      margin-bottom: 1.25rem;
    }

    h3 {
      font-size: var(--h3-size);
      color: var(--h3-color);
      font-weight: var(--h3-weight);
      line-height: 1.4;
      margin-bottom: 1rem;
    }

    p {
      font-size: var(--p-size);
      color: var(--p-color);
      margin-bottom: 1.25rem;
    }
    
    img { max-width: 100%; height: auto; }
    
    a {
      color: var(--link-color);
      text-decoration: none;
      transition: color 0.2s;
    }
    
    a:hover { filter: brightness(85%); }
    
    .container {
      width: 100%;
      max-width: var(--max-width);
      margin: 0 auto;
      padding: 0 1.5rem;
    }
    
    /* Header */
    .site-header {
      height: var(--header-height);
      border-bottom: 1px solid var(--color-border);
      background: var(--color-background);
      position: sticky;
      top: 0;
      z-index: 100;
    }
    
    .site-header .container {
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    
    .site-logo {
      font-size: 1.25rem;
      font-weight: 700;
      color: var(--color-text);
    }
    
    /* Nav toggle (mobile hamburger) */
    .nav-toggle {
      display: none;
      flex-direction: column;
      gap: 5px;
      background: none;
      border: none;
      cursor: pointer;
      padding: 0.5rem;
      z-index: 200;
    }
    .nav-toggle span {
      display: block;
      width: 24px;
      height: 2px;
      background: var(--color-text);
      border-radius: 2px;
      transition: transform 0.3s, opacity 0.3s;
    }
    .nav-toggle.active span:nth-child(1) { transform: translateY(7px) rotate(45deg); }
    .nav-toggle.active span:nth-child(2) { opacity: 0; }
    .nav-toggle.active span:nth-child(3) { transform: translateY(-7px) rotate(-45deg); }

    .site-nav ul {
      display: flex;
      gap: 2rem;
      list-style: none;
    }

    .site-nav a {
      color: var(--color-text);
      font-weight: 500;
    }

    .site-nav a:hover { color: var(--color-primary); }

    .site-nav > ul > li { position: relative; }

    /* Submenu toggle arrow for items with children */
    .submenu-toggle {
      display: none;
      background: none;
      border: none;
      cursor: pointer;
      padding: 0.25rem;
      color: var(--color-text-light, #6b7280);
      transition: transform 0.2s;
    }
    .submenu-toggle.open { transform: rotate(180deg); }

    /* Dropdown */
    .site-nav .has-dropdown .dropdown,
    .site-nav .has-megamenu .megamenu {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      z-index: 100;
      background: var(--color-surface, #fff);
      border: 1px solid var(--color-border, #e5e7eb);
      border-radius: 0.5rem;
      box-shadow: 0 10px 30px rgba(0,0,0,0.1);
      min-width: 200px;
    }
    .site-nav .has-dropdown:hover .dropdown,
    .site-nav .has-megamenu:hover .megamenu {
      display: grid;
    }
    .site-nav .has-dropdown .dropdown {
      display: none;
      padding: 0.5rem 0;
      list-style: none;
    }
    .site-nav .has-dropdown:hover .dropdown { display: block; }
    .site-nav .has-dropdown .dropdown li a {
      display: block;
      padding: 0.5rem 1rem;
      white-space: nowrap;
    }

    /* Megamenu */
    .site-nav .has-megamenu .megamenu {
      left: 50%;
      transform: translateX(-50%);
      grid-template-columns: repeat(var(--mega-columns, 4), 1fr);
      gap: 1rem;
      padding: 1.5rem;
      min-width: max(400px, calc(var(--mega-columns, 4) * 180px));
    }
    .megamenu-item {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
      padding: 0.75rem;
      border-radius: 0.375rem;
      text-decoration: none;
      transition: background 0.15s;
    }
    .megamenu-item:hover { background: var(--color-bg, #f9fafb); }
    .megamenu-item-img {
      width: 100%;
      aspect-ratio: 16/9;
      object-fit: cover;
      border-radius: 0.25rem;
      margin-bottom: 0.25rem;
    }
    .megamenu-item-title {
      font-size: 0.875rem;
      font-weight: 600;
      color: var(--color-text);
    }
    .megamenu-item-desc {
      font-size: 0.75rem;
      color: var(--color-text-light, #6b7280);
      line-height: 1.4;
    }

    /* Mobile nav */
    @media (max-width: 768px) {
      .nav-toggle { display: flex; }

      .site-nav {
        position: fixed;
        top: 0;
        right: -100%;
        width: 85%;
        max-width: 360px;
        height: 100vh;
        background: var(--color-surface, #fff);
        box-shadow: -4px 0 20px rgba(0,0,0,0.15);
        z-index: 150;
        transition: right 0.3s ease;
        overflow-y: auto;
        padding: calc(var(--header-height) + 1rem) 0 2rem;
      }
      .site-nav.open { right: 0; }

      .site-nav > ul {
        flex-direction: column;
        gap: 0;
        padding: 0;
      }

      .site-nav > ul > li {
        border-bottom: 1px solid var(--color-border, #e5e7eb);
      }

      /* Item row: link + toggle side by side */
      .site-nav > ul > li > a {
        display: block;
        padding: 0.875rem 1.25rem;
      }
      .site-nav .has-dropdown > a,
      .site-nav .has-megamenu > a {
        padding-right: 0;
      }

      .has-dropdown, .has-megamenu {
        display: flex;
        flex-wrap: wrap;
      }
      .has-dropdown > a, .has-megamenu > a {
        flex: 1;
      }
      .submenu-toggle {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 48px;
      }

      /* Reset desktop hover and positioning */
      .site-nav .has-dropdown .dropdown,
      .site-nav .has-megamenu .megamenu {
        position: static;
        box-shadow: none;
        border: none;
        border-radius: 0;
        min-width: 0;
        width: 100%;
        transform: none;
        background: var(--color-bg, #f9fafb);
      }
      .site-nav .has-dropdown:hover .dropdown,
      .site-nav .has-megamenu:hover .megamenu {
        display: none;
      }
      .site-nav .has-dropdown .dropdown.open,
      .site-nav .has-megamenu .megamenu.open {
        display: block;
      }

      /* Mobile dropdown */
      .site-nav .has-dropdown .dropdown li a {
        padding: 0.625rem 1.25rem 0.625rem 2rem;
      }

      /* Mobile megamenu */
      .site-nav .has-megamenu .megamenu {
        grid-template-columns: 1fr !important;
        padding: 0.5rem 0;
      }
      .megamenu-item {
        flex-direction: row;
        align-items: center;
        padding: 0.625rem 1.25rem 0.625rem 2rem;
        gap: 0.75rem;
      }
      .megamenu-item-img {
        width: 48px;
        height: 48px;
        aspect-ratio: 1;
        flex-shrink: 0;
        margin-bottom: 0;
      }
      .megamenu-item-title { font-size: 0.8125rem; }
      .megamenu-item-desc { font-size: 0.6875rem; }

      /* Overlay */
      .nav-overlay {
        display: none;
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,0.4);
        z-index: 140;
      }
      .nav-overlay.open { display: block; }
    }

    /* Main */
    .site-main {
      min-height: calc(100vh - var(--header-height) - 200px);
    }
    
    /* Footer */
    .site-footer {
      background: var(--color-surface);
      border-top: 1px solid var(--color-border);
      padding: 3rem 0;
      margin-top: 4rem;
    }
    
    .site-footer p {
      color: var(--color-text-muted);
      font-size: 0.875rem;
    }
    
    /* Utility Classes */
    .text-center { text-align: center; }
    .mt-1 { margin-top: 0.5rem; }
    .mt-2 { margin-top: 1rem; }
    .mt-4 { margin-top: 2rem; }
    .mb-1 { margin-bottom: 0.5rem; }
    .mb-2 { margin-bottom: 1rem; }
    .mb-4 { margin-bottom: 2rem; }
    
    /* Buttons */
    .btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 0.75rem 1.5rem;
      font-size: 1rem;
      font-weight: 500;
      border-radius: 0.5rem;
      border: none;
      cursor: pointer;
      transition: all 0.2s;
    }
    
    .btn-primary {
      background: var(--color-primary);
      color: white;
    }
    
    .btn-primary:hover {
      background: var(--color-primary-dark);
      color: white;
    }
    
    {% block styles %}{% endblock %}

    {{ site.global_custom_css | safe }}
  </style>
</head>
<body{% if user and page %} data-page-id="{{ page.id }}" data-template-id="{{ template.id }}" data-content-type="{{ content_type | default('pages') }}"{% endif %}>
  <header class="site-header">
    <div class="container">
      <a href="/" class="site-logo">{{ site.site_name }}</a>
      <button class="nav-toggle" aria-label="Toggle navigation" aria-expanded="false">
        <span></span><span></span><span></span>
      </button>
      <nav class="site-nav">
        <ul>
          {% if menus['main-nav'] and menus['main-nav'].items %}
            {% for item in menus['main-nav'].items %}
              {% if item.is_mega and item.children.length %}
                <li class="has-megamenu {{ item.css_class }}">
                  <a href="{{ item.url }}" {% if item.target %}target="{{ item.target }}"{% endif %}>{{ item.title }}</a>
                  <button class="submenu-toggle" aria-label="Expand submenu">&#9662;</button>
                  <div class="megamenu" style="--mega-columns: {{ item.mega_columns or 4 }}">
                    {% for child in item.children %}
                      <a href="{{ child.url }}" class="megamenu-item {{ child.css_class }}" {% if child.target %}target="{{ child.target }}"{% endif %}>
                        {% if child.image %}<img src="{{ child.image }}" alt="{{ child.title }}" class="megamenu-item-img">{% endif %}
                        <strong class="megamenu-item-title">{{ child.title }}</strong>
                        {% if child.description %}<span class="megamenu-item-desc">{{ child.description }}</span>{% endif %}
                      </a>
                    {% endfor %}
                  </div>
                </li>
              {% elif item.children and item.children.length %}
                <li class="has-dropdown {{ item.css_class }}">
                  <a href="{{ item.url }}" {% if item.target %}target="{{ item.target }}"{% endif %}>{{ item.title }}</a>
                  <button class="submenu-toggle" aria-label="Expand submenu">&#9662;</button>
                  <ul class="dropdown">
                    {% for child in item.children %}
                      <li class="{{ child.css_class }}"><a href="{{ child.url }}" {% if child.target %}target="{{ child.target }}"{% endif %}>{{ child.title }}</a></li>
                    {% endfor %}
                  </ul>
                </li>
              {% else %}
                <li class="{{ item.css_class }}"><a href="{{ item.url }}" {% if item.target %}target="{{ item.target }}"{% endif %}>{{ item.title }}</a></li>
              {% endif %}
            {% endfor %}
          {% else %}
            <li><a href="/">Home</a></li>
            <li><a href="/classifieds">Classifieds</a></li>
            <li><a href="/pages/about">About</a></li>
            <li><a href="/pages/contact">Contact</a></li>
            {% if customer %}
              <li><a href="/customer/ads">My Ads</a></li>
              <li><a href="/customer/account">Account</a></li>
            {% else %}
              <li><a href="/customer/login">Login</a></li>
            {% endif %}
          {% endif %}
        </ul>
      </nav>
    </div>
  </header>
  <div class="nav-overlay"></div>

  <main class="site-main">
    {% block content %}{% endblock %}
  </main>

  <footer class="site-footer">
    <div class="container">
      {# DEBUG: User is {{ user.email }} with role {{ user.role }} #}
      {# TEMPLATE_OPTIONS_DEBUG: {{ template.options | dump | safe }} #}
      <p>&copy; <script>document.write(new Date().getFullYear());</script><noscript>2024</noscript> {{ site.site_name }}. All rights reserved.</p>
      
      {# Design Mode Toolbar (Admins Only) #}
      {% if user and (user.role == 'admin' or user.role == 'editor') %}
      <div class="admin-design-tools" style="margin-top: 2rem; padding-top: 2rem; border-top: 1px solid var(--color-border); display: flex; gap: 2rem; align-items: center; justify-content: center; flex-wrap: wrap;">
        <span style="font-size: 0.75rem; font-weight: 700; text-transform: uppercase; color: var(--color-text-muted);">Template Design:</span>
        
        <div style="display: flex; align-items: center; gap: 0.5rem; font-size: 0.875rem; cursor: pointer;"
             data-cms-option="primary_color"
             data-cms-option-type="color"
             data-cms-option-label="Primary Color"
             data-cms-value="{{ template.options.primary_color | default('#2563eb') }}">
          <div style="width: 20px; height: 20px; border-radius: 4px; background: var(--color-primary); border: 1px solid rgba(0,0,0,0.1);"></div>
          <span>Primary Color</span>
        </div>

        <div style="display: flex; align-items: center; gap: 0.5rem; font-size: 0.875rem; cursor: pointer;"
             data-cms-option="secondary_color"
             data-cms-option-type="color"
             data-cms-option-label="Secondary Color"
             data-cms-value="{{ template.options.secondary_color | default('#64748b') }}">
          <div style="width: 20px; height: 20px; border-radius: 4px; background: var(--color-secondary); border: 1px solid rgba(0,0,0,0.1);"></div>
          <span>Secondary Color</span>
        </div>
      </div>
      {% endif %}
    </div>
  </footer>

  <script>
  (function() {
    var toggle = document.querySelector('.nav-toggle');
    var nav = document.querySelector('.site-nav');
    var overlay = document.querySelector('.nav-overlay');
    if (!toggle || !nav) return;

    function closeNav() {
      toggle.classList.remove('active');
      toggle.setAttribute('aria-expanded', 'false');
      nav.classList.remove('open');
      if (overlay) overlay.classList.remove('open');
      document.body.style.overflow = '';
    }

    toggle.addEventListener('click', function() {
      var isOpen = nav.classList.contains('open');
      if (isOpen) { closeNav(); } else {
        toggle.classList.add('active');
        toggle.setAttribute('aria-expanded', 'true');
        nav.classList.add('open');
        if (overlay) overlay.classList.add('open');
        document.body.style.overflow = 'hidden';
      }
    });

    if (overlay) overlay.addEventListener('click', closeNav);

    document.querySelectorAll('.submenu-toggle').forEach(function(btn) {
      btn.addEventListener('click', function(e) {
        e.preventDefault();
        var sub = this.nextElementSibling;
        if (!sub) return;
        var isOpen = sub.classList.contains('open');
        sub.classList.toggle('open');
        this.classList.toggle('open');
      });
    });
  })();
  </script>

  {% block scripts %}{% endblock %}

  {% if user %}
  <link rel="stylesheet" href="/css/edit-in-place.css">
  <script src="/js/edit-in-place.js"></script>
  {% endif %}
</body>
</html>
