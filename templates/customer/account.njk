{% extends "layouts/base.njk" %}

{% block content %}
<div class="account-container">
  <div class="account-header">
    <h1>My Account</h1>
    <button id="logout-btn" class="btn btn-secondary">Sign Out</button>
  </div>

  <div class="account-content">
    {# Profile Section #}
    <div class="account-section">
      <h2>Profile Information</h2>
      <div id="profile-content" class="loading">Loading...</div>
    </div>

    {# My Sites Section #}
    <div class="account-section">
      <div class="section-header">
        <h2>My Sites</h2>
        <div id="site-limits" class="limits-badge">Checking limits...</div>
      </div>
      <div id="sites-list" class="sites-grid">
        <div class="loading">Loading your sites...</div>
      </div>
      
      <div id="create-site-container" class="create-site-box hidden">
        <hr>
        <h3>Create New Site</h3>
        <form id="create-site-form" class="form-inline">
          <div class="form-group">
            <input type="text" id="site-name" placeholder="Site Name" required class="form-input">
          </div>
          <div class="form-group">
            <div class="input-group">
              <input type="text" id="site-subdomain" placeholder="subdomain" required class="form-input">
              <span class="input-suffix">.wolfwave.com</span>
            </div>
          </div>
          <button type="submit" id="create-site-btn" class="btn btn-primary">Launch Site</button>
        </form>
        <div id="create-site-error" class="error-message hidden"></div>
      </div>
    </div>

    {# Classifieds & Messaging #}
    <div class="account-section">
      <h2>Classifieds & Messaging</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <a href="/customer/messages" class="p-6 border-2 border-primary-100 rounded-2xl bg-primary-50/10 hover:bg-primary-50 transition-all group">
          <h3 class="text-primary-600 mb-1 flex items-center gap-2 font-black uppercase tracking-tight">
            Messages
            <span class="group-hover:translate-x-1 transition-transform">→</span>
          </h3>
          <p class="text-sm text-gray-500 mb-0">View and reply to your ad inquiries</p>
        </a>
        <a href="/customer/ads" class="p-6 border-2 border-indigo-100 rounded-2xl bg-indigo-50/10 hover:bg-indigo-50 transition-all group">
          <h3 class="text-indigo-600 mb-1 flex items-center gap-2 font-black uppercase tracking-tight">
            My Ads
            <span class="group-hover:translate-x-1 transition-transform">→</span>
          </h3>
          <p class="text-sm text-gray-500 mb-0">Manage your active classified listings</p>
        </a>
      </div>
    </div>

    {# Orders Section #}
    <div class="account-section">
      <h2>Recent Orders</h2>
      <div id="orders-content" class="loading">Loading...</div>
    </div>

    {# Password Section #}
    <div class="account-section">
      <h2>Change Password</h2>
      <form id="password-form" class="form">
        <div class="form-group">
          <label for="current-password">Current Password</label>
          <input type="password" id="current-password" name="current-password" required class="form-input">
        </div>

        <div class="form-group">
          <label for="new-password">New Password</label>
          <input type="password" id="new-password" name="new-password" required class="form-input">
          <p class="form-hint">Minimum 6 characters</p>
        </div>

        <div class="form-group">
          <label for="confirm-password">Confirm Password</label>
          <input type="password" id="confirm-password" name="confirm-password" required class="form-input">
        </div>

        <div id="password-error" class="error-message hidden"></div>
        <div id="password-success" class="success-message hidden"></div>

        <button type="submit" class="btn btn-primary">Update Password</button>
      </form>
    </div>
  </div>
</div>

<script>
  // Load customer profile
  async function loadProfile() {
    try {
      console.log('[Account] Loading profile...');
      const response = await fetch('/api/customer-auth/me', {
        credentials: 'include'
      });

      console.log('[Account] Profile response status:', response.status);
      
      if (!response.ok) {
        if (response.status === 401) {
          console.log('[Account] Not authenticated, redirecting to login');
          window.location.href = '/customer/login';
          return;
        }
        throw new Error(`Failed to load profile: ${response.status}`);
      }

      const customer = await response.json();
      console.log('[Account] Customer data:', customer);
      const profileDiv = document.getElementById('profile-content');

      profileDiv.innerHTML = `
        <div class="profile-info">
          <div class="info-item">
            <label>Name</label>
            <p>${customer.firstName || ''} ${customer.lastName || ''}</p>
          </div>
          <div class="info-item">
            <label>Email</label>
            <p>${customer.email}</p>
          </div>
          <div class="info-item">
            <label>Phone</label>
            <p>${customer.phone || 'Not provided'}</p>
          </div>
          <div class="info-item">
            <label>Member Since</label>
            <p>${new Date(customer.createdAt).toLocaleDateString()}</p>
          </div>
          <button id="edit-profile-btn" class="btn btn-secondary">Edit Profile</button>
        </div>
      `;

      document.getElementById('edit-profile-btn').addEventListener('click', () => {
        alert('Profile editing coming soon!');
      });
    } catch (err) {
      console.error('Error loading profile:', err);
      document.getElementById('profile-content').innerHTML = '<p class="error">Failed to load profile</p>';
    }
  }

  // Load customer sites
  async function loadSites() {
    try {
      const sitesList = document.getElementById('sites-list');
      const response = await fetch('/api/customer-tenants', { credentials: 'include' });
      
      if (!response.ok) throw new Error('Failed to load sites');
      
      const sites = await response.json();
      
      if (sites.length === 0) {
        sitesList.innerHTML = '<p class="no-sites">You haven\'t created any sites yet.</p>';
      } else {
        sitesList.innerHTML = sites.map(site => `
          <div class="site-card">
            <div class="site-info">
              <span class="site-name">${site.name}</span>
              <span class="site-url">${site.subdomain}.wolfwave.com</span>
            </div>
            <div class="site-actions">
              <a href="http://${site.subdomain}.localhost:3000" target="_blank" class="btn btn-sm btn-secondary">Visit Site</a>
              <a href="http://${site.subdomain}.localhost:3000/admin/" target="_blank" class="btn btn-sm btn-primary">Admin</a>
            </div>
          </div>
        `).join('');
      }
      
      await loadLimits();
    } catch (err) {
      console.error('Error loading sites:', err);
      document.getElementById('sites-list').innerHTML = '<p class="error">Failed to load sites</p>';
    }
  }

  async function loadLimits() {
    try {
      const limitsDiv = document.getElementById('site-limits');
      const createContainer = document.getElementById('create-site-container');
      const response = await fetch('/api/customer-tenants/limits', { credentials: 'include' });
      
      if (!response.ok) return;
      
      const data = await response.json();
      limitsDiv.innerHTML = `${data.used} / ${data.limit} sites used (${data.plan_name})`;
      
      if (data.can_create) {
        createContainer.classList.remove('hidden');
      } else {
        createContainer.classList.add('hidden');
      }
    } catch (err) {
      console.error('Error loading limits:', err);
    }
  }

  // Handle site creation
  document.getElementById('create-site-form').addEventListener('submit', async (e) => {
    e.preventDefault();
    const btn = document.getElementById('create-site-btn');
    const errDiv = document.getElementById('create-site-error');
    const name = document.getElementById('site-name').value;
    const subdomain = document.getElementById('site-subdomain').value;

    errDiv.classList.add('hidden');
    btn.disabled = true;
    btn.textContent = 'Launching...';

    try {
      const response = await fetch('/api/customer-tenants', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify({ name, subdomain })
      });

      if (!response.ok) {
        const data = await response.json();
        throw new Error(data.message || data.error || 'Failed to create site');
      }

      // Success
      document.getElementById('create-site-form').reset();
      await loadSites();
      alert('Site created successfully! It is now ready to use.');
    } catch (err) {
      errDiv.textContent = err.message;
      errDiv.classList.remove('hidden');
    } finally {
      btn.disabled = false;
      btn.textContent = 'Launch Site';
    }
  });

  // Load customer orders
  async function loadOrders() {
    try {
      const ordersDiv = document.getElementById('orders-content');
      ordersDiv.innerHTML = '<p>Orders feature coming soon!</p>';
      // TODO: Implement orders endpoint
    } catch (err) {
      console.error('Error loading orders:', err);
      document.getElementById('orders-content').innerHTML = '<p class="error">Failed to load orders</p>';
    }
  }

  // Handle logout
  document.getElementById('logout-btn').addEventListener('click', async () => {
    try {
      await fetch('/api/customer-auth/logout', {
        method: 'POST',
        credentials: 'include'
      });
      window.location.href = '/';
    } catch (err) {
      console.error('Logout error:', err);
      alert('Logout failed');
    }
  });

  // Handle password change
  document.getElementById('password-form').addEventListener('submit', async (e) => {
    e.preventDefault();

    const currentPassword = document.getElementById('current-password').value;
    const newPassword = document.getElementById('new-password').value;
    const confirmPassword = document.getElementById('confirm-password').value;
    const errorDiv = document.getElementById('password-error');
    const successDiv = document.getElementById('password-success');

    errorDiv.classList.add('hidden');
    successDiv.classList.add('hidden');

    if (newPassword.length < 6) {
      errorDiv.textContent = 'New password must be at least 6 characters';
      errorDiv.classList.remove('hidden');
      return;
    }

    if (newPassword !== confirmPassword) {
      errorDiv.textContent = 'Passwords do not match';
      errorDiv.classList.remove('hidden');
      return;
    }

    try {
      const response = await fetch('/api/customer-auth/change-password', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify({
          currentPassword,
          newPassword
        })
      });

      if (!response.ok) {
        const data = await response.json();
        throw new Error(data.error || 'Failed to change password');
      }

      successDiv.textContent = 'Password changed successfully!';
      successDiv.classList.remove('hidden');
      document.getElementById('password-form').reset();

      setTimeout(() => {
        successDiv.classList.add('hidden');
      }, 3000);
    } catch (err) {
      errorDiv.textContent = err.message;
      errorDiv.classList.remove('hidden');
    }
  });

  // Load content on page load
  document.addEventListener('DOMContentLoaded', () => {
    console.log('[Account] Page loaded, DOM ready');
    console.log('[Account] Customer data from template:', {{ customer | dump | safe }});
    
    loadProfile();
    loadSites();
    loadOrders();
  });
</script>

<style>
