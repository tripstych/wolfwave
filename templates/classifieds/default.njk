{% extends "layouts/base.njk" %}

{% block head %}
{{ super() }}
<link rel="stylesheet" href="/styles/classifieds-detail.css">
{% endblock %}

{% block content %}
<div class="ad-detail-container">
  <div class="ad-detail-grid">
    {# Left: Images #}
    <div class="ad-images">
      <div class="ad-main-image">
        {% if ad.image %}
          <img src="{{ ad.image }}" alt="{{ ad.title }}">
        {% else %}
          <div class="ad-image-placeholder">No Image Provided</div>
        {% endif %}
      </div>
      
      {# Gallery (if multiple images implemented) #}
      {% if ad.images and ad.images.length > 0 %}
        <div class="ad-image-gallery">
          {% for img in ad.images %}
            <div class="ad-gallery-thumb">
              <img src="{{ img.url or img }}" alt="Gallery image">
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>

    {# Right: Info #}
    <div class="ad-info">
      <div class="ad-header">
        <nav class="ad-breadcrumb">
          <a href="/classifieds">Classifieds</a>
          <span>/</span>
          <span>{{ ad.category_name }}</span>
        </nav>
        <h1 class="ad-title">{{ ad.title }}</h1>
        <div class="ad-price-row">
          <span class="ad-price">
            {% if ad.price %}${{ ad.price }}{% else %}Contact for Price{% endif %}
          </span>
          <span class="ad-condition">{{ ad.condition | replace('_', ' ') }}</span>
        </div>
      </div>

      <div class="ad-meta-grid">
        <div class="ad-meta-item">
          <label>Location</label>
          <p>{{ ad.location or 'Not specified' }}</p>
        </div>
        <div class="ad-meta-item">
          <label>Posted By</label>
          <p>{{ ad.owner_first_name }} {{ ad.owner_last_name }}</p>
        </div>
      </div>

      <div class="ad-description">
        <label>Description</label>
        {{ ad.description | nl2br | safe }}
      </div>

      {# Dynamic Regions #}
      {% for region_name, val in content %}
        {% if region_name != 'description' and val %}
          <div class="ad-region">
            <label>{{ region_name | replace('_', ' ') }}</label>
            <div class="ad-region-content">
              {{ val | safe }}
            </div>
          </div>
        {% endif %}
      {% endfor %}

      <div class="ad-actions">
        <div class="message-seller-card">
          <h3>Message Seller</h3>
          
          {% if customer %}
            {% if customer.id == ad.customer_id %}
              <div class="own-ad-notice">
                This is your ad. You can view replies in your <a href="/customer/messages">Inbox</a>.
              </div>
            {% else %}
              <form id="message-form" class="message-form">
                <input type="hidden" name="ad_id" value="{{ ad.id }}">
                <textarea 
                  name="content" 
                  required 
                  rows="3" 
                  placeholder="Is this still available? I'm interested..."
                ></textarea>
                
                <div class="message-form-row">
                  <input type="url" name="image" placeholder="Optional image URL...">
                </div>

                <button type="submit" id="send-btn">
                  Send Message
                </button>
              </form>
              <div id="message-status" class="message-status hidden"></div>
            {% endif %}
          {% else %}
            <div class="login-prompt">
              <p>You must be logged in to message the seller.</p>
              <a href="/customer/login?redirect={{ ad.slug }}" class="btn">Login to Message</a>
            </div>
          {% endif %}
        </div>

        <div class="contact-info">
          Direct Contact: {{ ad.contact_info }}
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  if (document.getElementById('message-form')) {
    document.getElementById('message-form').addEventListener('submit', async (e) => {
      e.preventDefault();
      const btn = document.getElementById('send-btn');
      const status = document.getElementById('message-status');
      const formData = new FormData(e.target);
      
      btn.disabled = true;
      btn.textContent = 'Sending...';
      
      try {
        const response = await fetch('/api/messages/send', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            ad_id: formData.get('ad_id'),
            content: formData.get('content'),
            image: formData.get('image')
          })
        });
        
        if (response.ok) {
          status.textContent = 'Message sent! You can follow up in your inbox.';
          status.className = 'message-status success';
          e.target.reset();
        } else {
          throw new Error('Failed to send message');
        }
      } catch (err) {
        status.textContent = err.message;
        status.className = 'message-status error';
      } finally {
        btn.disabled = false;
        btn.textContent = 'Send Message';
      }
    });
  }
</script>
{% endblock %}
