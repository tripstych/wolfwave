{% extends "layouts/base.njk" %}

{% block styles %}
.service-hero {
  padding: 10rem 0 8rem;
  background: var(--color-primary);
  color: white;
  text-align: center;
}

.service-hero h1 { font-size: 4.5rem; color: white; margin-bottom: 2rem; }
.service-hero p { font-size: 1.5rem; color: rgba(255, 255, 255, 0.9); max-width: 800px; margin: 0 auto 3.5rem; }

.services-list {
  padding: 6rem 0;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 3rem;
  margin-top: -6rem;
}

.service-item {
  padding: 3rem 2rem;
  background: var(--color-background);
  border-radius: 1rem;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  border: 1px solid var(--color-border);
  text-align: left;
}

.service-item .icon { font-size: 2.5rem; margin-bottom: 1.5rem; color: var(--color-primary); }
.service-item h3 { margin-bottom: 1rem; }
.service-item p { color: var(--color-text-muted); margin-bottom: 0; }

.process-section {
  padding: 8rem 0;
  background: var(--color-surface);
}

.process-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 2rem;
  margin-top: 4rem;
  position: relative;
}

.process-step { text-align: center; position: relative; }
.step-num { width: 3rem; height: 3rem; background: var(--color-primary); color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem; font-weight: 700; font-size: 1.25rem; }
.process-step h4 { margin-bottom: 0.75rem; }
.process-step p { font-size: 0.875rem; color: var(--color-text-muted); }

.contact-cta {
  padding: 8rem 0;
  background: var(--color-background);
  text-align: center;
}

@media (max-width: 991px) {
  .services-list { grid-template-columns: 1fr; margin-top: 4rem; padding-top: 2rem; }
  .process-grid { grid-template-columns: 1fr; }
}
{% endblock %}

{% block content %}
<section class="service-hero">
  <div class="container">
    <h1 data-cms-region="headline" data-cms-type="text" data-cms-label="Hero Title">
      {{ content.headline | default("Expert Professional Services") }}
    </h1>
    <p data-cms-region="subtext" data-cms-type="textarea" data-cms-label="Hero Subtitle">
      {{ content.subtext | default("Transform your business with our dedicated team of consultants and specialists.") }}
    </p>
    <a href="#contact" class="btn btn-primary" style="background: white; color: var(--color-primary); font-weight: 700;">Request Consultation</a>
  </div>
</section>

<section class="container services-list" 
         data-cms-region="services" 
         data-cms-type="repeater" 
         data-cms-label="Services List"
         data-cms-fields='[{"name":"icon","type":"text","label":"Icon (Emoji)"},{"name":"title","type":"text","label":"Service Name"},{"name":"text","type":"textarea","label":"Service Description"}]'>
  {% for service in content.services %}
    <div class="service-item">
      <div class="icon">{{ service.icon }}</div>
      <h3>{{ service.title }}</h3>
      <p>{{ service.text }}</p>
    </div>
  {% else %}
    <div class="service-item"><div class="icon">üìà</div><h3>Strategy Consulting</h3><p>Develop a clear roadmap for your business growth and success.</p></div>
    <div class="service-item"><div class="icon">üíº</div><h3>Management</h3><p>Optimize your operations and management workflows for efficiency.</p></div>
    <div class="service-item"><div class="icon">‚öôÔ∏è</div><h3>Digital Transformation</h3><p>Leverage technology to modernize your entire service delivery model.</p></div>
  {% endfor %}
</section>

<section class="process-section">
  <div class="container">
    <h2 class="text-center">Our Simple Process</h2>
    <div class="process-grid" 
         data-cms-region="steps" 
         data-cms-type="repeater" 
         data-cms-label="Process Steps"
         data-cms-fields='[{"name":"title","type":"text","label":"Step Title"},{"name":"text","type":"textarea","label":"Step Description"}]'>
      {% for step in content.steps %}
        <div class="process-step">
          <div class="step-num">{{ loop.index }}</div>
          <h4>{{ step.title }}</h4>
          <p>{{ step.text }}</p>
        </div>
      {% else %}
        <div class="process-step"><div class="step-num">1</div><h4>Discovery</h4><p>We analyze your needs and goals in detail.</p></div>
        <div class="process-step"><div class="step-num">2</div><h4>Strategy</h4><p>A custom plan is developed for your project.</p></div>
        <div class="process-step"><div class="step-num">3</div><h4>Execution</h4><p>Our team implements the plan efficiently.</p></div>
        <div class="process-step"><div class="step-num">4</div><h4>Optimization</h4><p>We refine and improve for long-term results.</p></div>
      {% endfor %}
    </div>
  </div>
</section>

<section id="contact" class="contact-cta">
  <div class="container">
    <h2 data-cms-region="bottom_cta_title" data-cms-type="text" data-cms-label="Bottom CTA Title">{{ content.bottom_cta_title | default("Let's Get Started on Your Project") }}</h2>
    <p class="mb-4">Our experts are standing by to help you achieve your business objectives.</p>
    <a href="#" class="btn btn-primary btn-lg">Contact Us Today</a>
  </div>
</section>
{% endblock %}

