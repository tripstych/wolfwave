{% extends "layouts/base.njk" %}

{% block styles %}
.post-header {
  padding: 4rem 0 2rem;
  text-align: center;
}

.post-header h1 {
  font-size: 3rem;
  font-weight: 800;
  margin-bottom: 1rem;
}

.post-meta {
  color: var(--color-text-muted);
  font-size: 0.875rem;
  margin-bottom: 2rem;
  display: flex;
  justify-content: center;
  gap: 1rem;
}

.post-content {
  max-width: 800px;
  margin: 0 auto;
  padding: 2rem 0 4rem;
}

.post-body {
  font-size: 1.25rem;
  line-height: 1.8;
  color: var(--color-text);
}

.post-body h2 {
  font-size: 2rem;
  margin-top: 3rem;
  margin-bottom: 1.5rem;
}

.post-body p {
  margin-bottom: 1.5rem;
}

.post-body img {
  border-radius: 1rem;
  margin: 2rem 0;
  box-shadow: 0 10px 25px rgba(0,0,0,0.1);
}

.post-body blockquote {
  border-left: 4px solid var(--color-primary);
  padding-left: 2rem;
  margin: 3rem 0;
  font-size: 1.5rem;
  font-style: italic;
  color: var(--color-text-muted);
}
{% endblock %}

{% block content %}
<article class="post-container">
  <header class="post-header">
    <div class="container">
      <h1 data-cms-region="post_title" data-cms-type="text" data-cms-label="Post Title">
        {{ content.post_title | default(page.title) }}
      </h1>
      <div class="post-meta">
        <span>Published on {{ page.published_at | date("MMMM D, YYYY") }}</span>
        {% if page.created_by_name %}
          <span>by {{ page.created_by_name }}</span>
        {% endif %}
      </div>
    </div>
  </header>

  <div class="post-content">
    <div class="container">
      <div class="post-body" 
           data-cms-region="post_body" 
           data-cms-type="richtext" 
           data-cms-label="Post Content">
        {{ content.post_body | safe | default('<p>Start writing your amazing blog post here...</p>') }}
      </div>
    </div>
  </div>
</article>
{% endblock %}
