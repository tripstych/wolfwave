{% extends "layouts/base.njk" %}

{% block styles %}
.page-header {
  padding: 5rem 0 3rem;
}

.page-header h1 {
  font-size: 3.5rem;
  margin-bottom: 0;
  text-align: center;
}

.page-body {
  padding: 2rem 0 6rem;
  max-width: 800px;
  margin: 0 auto;
  line-height: 1.8;
  font-size: 1.125rem;
}

.cta-section {
  padding: 8rem 0;
  background: var(--color-surface);
  text-align: center;
  border-top: 1px solid var(--color-border);
}

.cta-section h2 {
  font-size: 3rem;
  margin-bottom: 1.5rem;
}

.cta-section p {
  font-size: 1.25rem;
  color: var(--color-text-muted);
  max-width: 600px;
  margin: 0 auto 3rem;
}

.cta-section .cta-group {
  display: flex;
  justify-content: center;
  gap: 1.5rem;
}

@media (max-width: 768px) {
  .page-header h1 { font-size: 2.5rem; }
  .cta-section h2 { font-size: 2rem; }
  .cta-section .cta-group { flex-direction: column; align-items: stretch; max-width: 300px; margin: 0 auto; }
}
{% endblock %}

{% block content %}
<header class="page-header">
  <div class="container">
    <h1 data-cms-region="page_title" data-cms-type="text" data-cms-label="Page Title">
      {{ content.page_title | default(page.title) }}
    </h1>
  </div>
</header>

<section class="page-body">
  <div class="container">
    <article data-cms-region="main_content" data-cms-type="richtext" data-cms-label="Main Content">
      {{ content.main_content | safe | default("<p>The main portion of your content should go here. After the user finishes reading, they are presented with a clear call to action at the bottom of the page.</p><h2>Wrap Up</h2><p>Finish your article or case study with a strong conclusion that leads naturally to the desired next step.</p>") }}
    </article>
  </div>
</section>

<section class="cta-section">
  <div class="container">
    <h2 data-cms-region="cta_title" data-cms-type="text" data-cms-label="CTA Title">
      {{ content.cta_title | default("Let's Build Something Great Together") }}
    </h2>
    <p data-cms-region="cta_text" data-cms-type="textarea" data-cms-label="CTA Text">
      {{ content.cta_text | default("Ready to get started on your next project? Contact us today to learn more.") }}
    </p>
    <div class="cta-group">
      <div data-cms-region="cta_primary" data-cms-type="link" data-cms-label="Primary CTA">
        <a href="{{ content.cta_primary.url | default('#') }}" class="btn btn-primary btn-lg">
          {{ content.cta_primary.text | default("Contact Sales") }}
        </a>
      </div>
      <div data-cms-region="cta_secondary" data-cms-type="link" data-cms-label="Secondary CTA">
        <a href="{{ content.cta_secondary.url | default('#') }}" class="btn btn-outline btn-lg" style="border: 2px solid var(--color-primary); color: var(--color-primary); background: transparent;">
          {{ content.cta_secondary.text | default("View Portfolio") }}
        </a>
      </div>
    </div>
  </div>
</section>
{% endblock %}

