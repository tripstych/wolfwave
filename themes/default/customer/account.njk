    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
  }

  .account-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #e5e7eb;
  }

  .account-header h1 {
    margin: 0;
    font-size: 2rem;
  }

  .account-nav {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .account-content {
    display: grid;
    gap: 2rem;
  }

  .account-section {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    padding: 1.5rem;
  }

