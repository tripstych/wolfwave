{% extends "layouts/base.njk" %}

{% block content %}
<div class="account-container">
  <div class="account-header">
    <h1>My Account</h1>
    <div class="account-nav">
      <a href="/customer/downloads" class="btn btn-secondary">My Downloads</a>
      <button id="logout-btn" class="btn btn-secondary">Sign Out</button>
    </div>
  </div>

  <div class="account-content">
    {# Profile Section #}
    <div class="account-section">
      <h2>Profile Information</h2>
      <div id="profile-content" class="loading">Loading...</div>
    </div>

    {# Shipping Address Section #}
    <div class="account-section">
      <h2>Shipping Address</h2>
      <div id="address-display">
        {% if customer and customer.default_address %}
          <div class="profile-info">
            <div class="info-item">
              <label>Name</label>
              <p>{{ customer.default_address.first_name }} {{ customer.default_address.last_name }}</p>
            </div>
            <div class="info-item">
              <label>Address</label>
              <p>
                {{ customer.default_address.address1 }}
                {% if customer.default_address.address2 %}<br>{{ customer.default_address.address2 }}{% endif %}
                <br>{{ customer.default_address.city }}, {{ customer.default_address.province }} {{ customer.default_address.postal_code }}
                <br>{{ customer.default_address.country }}
              </p>
            </div>
            {% if customer.default_address.phone %}
            <div class="info-item">
              <label>Phone</label>
              <p>{{ customer.default_address.phone }}</p>
            </div>
            {% endif %}
          </div>
          <button type="button" id="edit-address-btn" class="btn btn-secondary" style="margin-top:1rem">Edit Address</button>
        {% else %}
          <p class="no-data">No shipping address saved yet.</p>
          <button type="button" id="edit-address-btn" class="btn btn-secondary" style="margin-top:0.5rem">Add Address</button>
        {% endif %}
      </div>

      <div id="address-edit" class="hidden">
        <form id="address-form" class="form" style="max-width:100%">
          <div style="display:grid;grid-template-columns:1fr 1fr;gap:1rem">
            <div class="form-group">
              <label for="addr-first-name">First Name *</label>
              <input type="text" id="addr-first-name" required class="form-input"
                value="{{ customer.default_address.first_name if customer.default_address else customer.first_name }}">
            </div>
            <div class="form-group">
              <label for="addr-last-name">Last Name *</label>
              <input type="text" id="addr-last-name" required class="form-input"
                value="{{ customer.default_address.last_name if customer.default_address else customer.last_name }}">
            </div>
          </div>
          <div class="form-group">
            <label for="addr-address1">Address *</label>
            <input type="text" id="addr-address1" required class="form-input"
              value="{{ customer.default_address.address1 if customer and customer.default_address else '' }}">
          </div>
          <div class="form-group">
            <label for="addr-address2">Apartment, suite, etc.</label>
            <input type="text" id="addr-address2" class="form-input"
              value="{{ customer.default_address.address2 if customer and customer.default_address else '' }}">
          </div>
          <div style="display:grid;grid-template-columns:1fr 1fr 1fr;gap:1rem">
            <div class="form-group">
              <label for="addr-city">City *</label>
              <input type="text" id="addr-city" required class="form-input"
                value="{{ customer.default_address.city if customer and customer.default_address else '' }}">
            </div>
            <div class="form-group">
              <label for="addr-province">State / Province *</label>
              <input type="text" id="addr-province" required class="form-input"
                value="{{ customer.default_address.province if customer and customer.default_address else '' }}">
            </div>
            <div class="form-group">
              <label for="addr-postal-code">Postal Code *</label>
              <input type="text" id="addr-postal-code" required class="form-input"
                value="{{ customer.default_address.postal_code if customer and customer.default_address else '' }}">
            </div>
          </div>
          <div style="display:grid;grid-template-columns:1fr 1fr;gap:1rem">
            <div class="form-group">
              <label for="addr-country">Country *</label>
              <select id="addr-country" required class="form-input">
                <option value="">Select country</option>
                <option value="US"{{ ' selected' if not customer or not customer.default_address or customer.default_address.country == 'US' }}>United States</option>
                <option value="CA"{{ ' selected' if customer and customer.default_address and customer.default_address.country == 'CA' }}>Canada</option>
                <option value="GB"{{ ' selected' if customer and customer.default_address and customer.default_address.country == 'GB' }}>United Kingdom</option>
                <option value="AU"{{ ' selected' if customer and customer.default_address and customer.default_address.country == 'AU' }}>Australia</option>
                <option value="DE"{{ ' selected' if customer and customer.default_address and customer.default_address.country == 'DE' }}>Germany</option>
                <option value="FR"{{ ' selected' if customer and customer.default_address and customer.default_address.country == 'FR' }}>France</option>
                <option value="JP"{{ ' selected' if customer and customer.default_address and customer.default_address.country == 'JP' }}>Japan</option>
              </select>
            </div>
            <div class="form-group">
              <label for="addr-phone">Phone</label>
              <input type="tel" id="addr-phone" class="form-input"
                value="{{ customer.default_address.phone if customer and customer.default_address else '' }}">
            </div>
          </div>
          <div id="address-error" class="error-message hidden"></div>
          <div id="address-success" class="success-message hidden"></div>
          <div class="form-actions">
            <button type="submit" class="btn btn-primary">Save Address</button>
            <button type="button" id="cancel-address-btn" class="btn btn-secondary">Cancel</button>
          </div>
        </form>
      </div>
    </div>

    {# Orders Section #}
    <div class="account-section">
      <h2>Recent Orders</h2>
      <div id="orders-content" class="loading">Loading...</div>
    </div>

    {# Password Section #}
    <div class="account-section">
      <h2>Change Password</h2>
      <form id="password-form" class="form">
        <div class="form-group">
          <label for="current-password">Current Password</label>
          <input type="password" id="current-password" name="current-password" required class="form-input">
        </div>

        <div class="form-group">
          <label for="new-password">New Password</label>
          <input type="password" id="new-password" name="new-password" required class="form-input">
          <p class="form-hint">Minimum 6 characters</p>
        </div>

        <div class="form-group">
          <label for="confirm-password">Confirm Password</label>
          <input type="password" id="confirm-password" name="confirm-password" required class="form-input">
        </div>

        <div id="password-error" class="error-message hidden"></div>
        <div id="password-success" class="success-message hidden"></div>

        <button type="submit" class="btn btn-primary">Update Password</button>
      </form>
    </div>
  </div>
</div>

<script>
  // Load customer profile
  async function loadProfile() {
    try {
      const response = await fetch('/api/customer-auth/me', {
        credentials: 'include'
      });

      if (!response.ok) {
        if (response.status === 401) {
          window.location.href = '/customer/login';
          return;
        }
        throw new Error('Failed to load profile');
      }

      const customer = await response.json();
      console.log('[Account Theme] Customer data:', customer);
      const profileDiv = document.getElementById('profile-content');

      profileDiv.innerHTML = `
        <div id="profile-display">
          <div class="profile-info">
            <div class="info-item">
              <label>Name</label>
              <p>${customer.firstName || ''} ${customer.lastName || ''}</p>
            </div>
            <div class="info-item">
              <label>Email</label>
              <p>${customer.email}</p>
            </div>
            <div class="info-item">
              <label>Phone</label>
              <p>${customer.phone || 'Not provided'}</p>
            </div>
            <div class="info-item">
              <label>Member Since</label>
              <p>${new Date(customer.createdAt).toLocaleDateString()}</p>
            </div>
            <button id="edit-profile-btn" class="btn btn-secondary">Edit Profile</button>
          </div>
        </div>
        
        <div id="profile-edit" class="hidden">
          <form id="profile-form" class="form">
            <div class="form-group">
              <label for="edit-first-name">First Name</label>
              <input type="text" id="edit-first-name" name="firstName" value="${customer.firstName || ''}" class="form-input">
            </div>
            <div class="form-group">
              <label for="edit-last-name">Last Name</label>
              <input type="text" id="edit-last-name" name="lastName" value="${customer.lastName || ''}" class="form-input">
            </div>
            <div class="form-group">
              <label for="edit-phone">Phone</label>
              <input type="tel" id="edit-phone" name="phone" value="${customer.phone || ''}" class="form-input">
            </div>
            <div id="profile-error" class="error-message hidden"></div>
            <div id="profile-success" class="success-message hidden"></div>
            <div class="form-actions">
              <button type="submit" class="btn btn-primary">Save Changes</button>
              <button type="button" id="cancel-edit-btn" class="btn btn-secondary">Cancel</button>
            </div>
          </form>
        </div>
      `;

      document.getElementById('edit-profile-btn').addEventListener('click', () => {
        document.getElementById('profile-display').classList.add('hidden');
        document.getElementById('profile-edit').classList.remove('hidden');
      });

      // Handle cancel edit
      document.getElementById('cancel-edit-btn').addEventListener('click', () => {
        document.getElementById('profile-edit').classList.add('hidden');
        document.getElementById('profile-display').classList.remove('hidden');
      });

      // Handle profile form submission
      document.getElementById('profile-form').addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const formData = new FormData(e.target);
        const errorDiv = document.getElementById('profile-error');
        const successDiv = document.getElementById('profile-success');
        
        errorDiv.classList.add('hidden');
        successDiv.classList.add('hidden');
        
        try {
          const response = await fetch('/api/customer-auth/profile', {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            credentials: 'include',
            body: JSON.stringify({
              firstName: formData.get('firstName'),
              lastName: formData.get('lastName'),
              phone: formData.get('phone')
            })
          });
          
          if (!response.ok) {
            const data = await response.json();
            throw new Error(data.error || 'Failed to update profile');
          }
          
          successDiv.textContent = 'Profile updated successfully!';
          successDiv.classList.remove('hidden');
          
          // Reload profile after successful update
          setTimeout(() => {
            loadProfile();
          }, 1500);
          
        } catch (err) {
          errorDiv.textContent = err.message;
          errorDiv.classList.remove('hidden');
        }
      });
    } catch (err) {
      console.error('Error loading profile:', err);
      document.getElementById('profile-content').innerHTML = '<p class="error">Failed to load profile</p>';
    }
  }

  // Load customer orders
  async function loadOrders() {
    const ordersDiv = document.getElementById('orders-content');
    try {
      const res = await fetch('/api/orders/my-orders', { credentials: 'include' });
      if (!res.ok) throw new Error('Failed to load orders');
      const orders = await res.json();

      if (!orders.length) {
        ordersDiv.innerHTML = '<p class="no-data">No orders yet.</p>';
        return;
      }

      ordersDiv.innerHTML = `
        <div class="orders-list">
          ${orders.map(o => `
            <div class="order-card">
              <div class="order-header">
                <span class="order-number">${o.order_number}</span>
                <span class="order-date">${new Date(o.created_at).toLocaleDateString()}</span>
              </div>
              <div class="order-body">
                <div class="order-items">
                  ${o.items.map(i => `<span class="order-item">${i.product_name} &times; ${i.quantity}</span>`).join('')}
                </div>
                <div class="order-meta">
                  <span class="order-status status-${o.status}">${o.status}</span>
                  <span class="order-total">$${Number(o.total).toFixed(2)}</span>
                </div>
              </div>
            </div>
          `).join('')}
        </div>
      `;
    } catch (err) {
      console.error('Error loading orders:', err);
      ordersDiv.innerHTML = '<p class="error">Failed to load orders</p>';
    }
  }

  // Handle logout
  document.getElementById('logout-btn').addEventListener('click', async () => {
    try {
      await fetch('/api/customer-auth/logout', {
        method: 'POST',
        credentials: 'include'
      });
      window.location.href = '/';
    } catch (err) {
      console.error('Logout error:', err);
      alert('Logout failed');
    }
  });

  // Handle password change
  document.getElementById('password-form').addEventListener('submit', async (e) => {
    e.preventDefault();

    const currentPassword = document.getElementById('current-password').value;
    const newPassword = document.getElementById('new-password').value;
    const confirmPassword = document.getElementById('confirm-password').value;
    const errorDiv = document.getElementById('password-error');
    const successDiv = document.getElementById('password-success');

    errorDiv.classList.add('hidden');
    successDiv.classList.add('hidden');

    if (newPassword.length < 6) {
      errorDiv.textContent = 'New password must be at least 6 characters';
      errorDiv.classList.remove('hidden');
      return;
    }

    if (newPassword !== confirmPassword) {
      errorDiv.textContent = 'Passwords do not match';
      errorDiv.classList.remove('hidden');
      return;
    }

    try {
      const response = await fetch('/api/customer-auth/change-password', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify({
          currentPassword,
          newPassword
        })
      });

      if (!response.ok) {
        const data = await response.json();
        throw new Error(data.error || 'Failed to change password');
      }

      successDiv.textContent = 'Password changed successfully!';
      successDiv.classList.remove('hidden');
      document.getElementById('password-form').reset();

      setTimeout(() => {
        successDiv.classList.add('hidden');
      }, 3000);
    } catch (err) {
      errorDiv.textContent = err.message;
      errorDiv.classList.remove('hidden');
    }
  });

  // Address edit toggle
  document.getElementById('edit-address-btn')?.addEventListener('click', () => {
    document.getElementById('address-display').classList.add('hidden');
    document.getElementById('address-edit').classList.remove('hidden');
  });

  document.getElementById('cancel-address-btn')?.addEventListener('click', () => {
    document.getElementById('address-edit').classList.add('hidden');
    document.getElementById('address-display').classList.remove('hidden');
  });

  // Address form submit
  document.getElementById('address-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const errorDiv = document.getElementById('address-error');
    const successDiv = document.getElementById('address-success');
    errorDiv.classList.add('hidden');
    successDiv.classList.add('hidden');

    try {
      const response = await fetch('/api/customer-auth/address', {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify({
          first_name: document.getElementById('addr-first-name').value,
          last_name: document.getElementById('addr-last-name').value,
          address1: document.getElementById('addr-address1').value,
          address2: document.getElementById('addr-address2').value,
          city: document.getElementById('addr-city').value,
          province: document.getElementById('addr-province').value,
          postal_code: document.getElementById('addr-postal-code').value,
          country: document.getElementById('addr-country').value,
          phone: document.getElementById('addr-phone').value
        })
      });

      if (!response.ok) {
        const data = await response.json();
        throw new Error(data.error || 'Failed to save address');
      }

      successDiv.textContent = 'Address saved successfully!';
      successDiv.classList.remove('hidden');
      setTimeout(() => window.location.reload(), 1000);
    } catch (err) {
      errorDiv.textContent = err.message;
      errorDiv.classList.remove('hidden');
    }
  });

  // Load content on page load
  document.addEventListener('DOMContentLoaded', () => {
    console.log('[Account Theme] Page loaded, starting loads...');
    loadProfile();
    loadOrders();
  });
</script>

<style>
