{% extends "layouts/base.njk" %}

{% block content %}
<div class="product-container">
  <div class="product-wrapper">
    <div class="product-images"
         data-cms-region="og_image"
         data-cms-type="image"
         data-cms-label="Product Image"
         data-cms-field="top">
      {% if product.og_image %}
        <img id="product-main-image" src="{{ product.og_image }}" alt="{{ product.title }}" data-default-image="{{ product.og_image }}">
      {% elif product.variants and product.variants[0] and product.variants[0].image %}
        <img id="product-main-image" src="{{ product.variants[0].image }}" alt="{{ product.title }}" data-default-image="{{ product.variants[0].image }}">
      {% else %}
        <div class="placeholder">No image</div>
      {% endif %}
    </div>

    <div class="product-info">
      <h1 data-cms-region="title"
          data-cms-type="text"
          data-cms-label="Product Title"
          data-cms-field="top">{{ product.title }}</h1>

      <div data-cms-region="product_details"
           data-cms-type="product-form"
           data-cms-label="Product Details"
           data-cms-field="top"
           data-cms-values='{{ {
             "og_image": product.og_image,
             "price": product.price,
             "compare_at_price": product.compare_at_price,
             "sku": product.sku,
             "inventory_quantity": product.inventory_quantity,
             "inventory_tracking": product.inventory_tracking,
             "allow_backorder": product.allow_backorder,
             "weight": product.weight,
             "weight_unit": product.weight_unit,
             "taxable": product.taxable,
             "requires_shipping": product.requires_shipping,
             "status": product.status
           } | dump | safe }}'>
        <div class="product-price">${{ product.price | round(2) }}{% if product.compare_at_price %} <span class="compare-price">${{ product.compare_at_price | round(2) }}</span>{% endif %}</div>

        {% if product.inventory_tracking %}
          <div class="inventory">
            {% if product.inventory_quantity > 0 %}
              <p>✓ In Stock ({{ product.inventory_quantity }} available)</p>
            {% elif product.allow_backorder %}
              <p>Pre-order available</p>
            {% else %}
              <p>✗ Out of Stock</p>
            {% endif %}
          </div>
        {% endif %}

        <div class="product-details">
          <p><strong>SKU:</strong> {{ product.sku }}</p>
          {% if product.weight %}
            <p><strong>Weight:</strong> {{ product.weight }} {{ product.weight_unit }}</p>
          {% endif %}
        </div>
      </div>

      {% if product.variants and product.variants.length > 0 %}
        <script id="variant-json" type="application/json">{{ product.variants | dump | safe }}</script>
        <div id="variant-selectors"></div>
      {% endif %}

      <div class="add-to-cart-section">
        <div class="quantity-controls">
          <button id="qty-minus" type="button">−</button>
          <input id="qty-input" type="number" value="1" min="1" max="999">
          <button id="qty-plus" type="button">+</button>
        </div>
        <button id="add-to-cart-btn" class="btn btn-primary" data-product-id="{{ product.id }}">Add to Cart</button>
      </div>
    </div>
  </div>

  {% if content.description %}
  <div class="product-description"
       data-cms-region="description"
       data-cms-type="richtext"
       data-cms-label="Product Description">
    {{ content.description | safe }}
  </div>
  {% else %}
  <div class="product-description"
       data-cms-region="description"
       data-cms-type="richtext"
       data-cms-label="Product Description">
    <p>No description yet. Click to add one.</p>
  </div>
  {% endif %}
</div>

<style>
  .product-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .product-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    margin-bottom: 4rem;
  }

  .product-images {
    background: #f5f5f5;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    aspect-ratio: 1;
  }

  .product-images img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 8px;
  }

  .placeholder {
    color: #ccc;
    font-size: 2rem;
  }

  .product-info {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .product-price {
    font-size: 1.75rem;
    font-weight: bold;
  }

  .compare-price {
    font-size: 1rem;
    color: #9ca3af;
    text-decoration: line-through;
    font-weight: 400;
  }

  .inventory {
    padding: 1rem;
    background: #f0f9ff;
    border-radius: 6px;
  }

  .product-details {
    border-top: 1px solid #e5e7eb;
    padding-top: 1.5rem;
  }

  .add-to-cart-section {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .quantity-controls {
    display: flex;
    align-items: center;
    border: 1px solid #d1d5db;
    border-radius: 6px;
    background: white;
  }

  .quantity-controls button {
    background: none;
    border: none;
    padding: 0.5rem 0.75rem;
    cursor: pointer;
    font-size: 1.25rem;
    color: #6b7280;
    transition: color 0.2s;
  }

  .quantity-controls button:hover {
    color: #111;
  }

  #qty-input {
    border: none;
    background: none;
    width: 60px;
    text-align: center;
    font-size: 1rem;
    padding: 0.5rem 0;
  }

  #qty-input:focus {
    outline: none;
  }

  .add-to-cart-section .btn {
    flex: 1;
    padding: 0.75rem 1.5rem;
  }

  .product-description {
    max-width: 800px;
    margin: 3rem auto 0;
    padding-top: 2rem;
    border-top: 1px solid #e5e7eb;
    line-height: 1.7;
    color: #374151;
  }

  .product-description h2,
  .product-description h3 {
    margin: 1.5rem 0 0.75rem;
  }

  .product-description p {
    margin-bottom: 1rem;
  }

  .variant-group {
    margin-bottom: 1rem;
  }

  .variant-group-label {
    display: block;
    font-weight: 600;
    margin-bottom: 0.5rem;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #374151;
  }

  .variant-options {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .variant-option {
    padding: 0.5rem 1rem;
    border: 2px solid #d1d5db;
    border-radius: 6px;
    background: white;
    cursor: pointer;
    font-size: 0.875rem;
    transition: all 0.15s;
  }

  .variant-option:hover {
    border-color: #9ca3af;
  }

  .variant-option.active {
    border-color: #111;
    background: #111;
    color: white;
  }

  @media (max-width: 768px) {
    .product-wrapper {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>

<script src="/js/cart.js"></script>
<script src="/js/add-to-cart.js"></script>
{% endblock %}
