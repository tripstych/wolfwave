{% extends "layouts/base.njk" %}

{% block styles %}
.error-page {
  padding: 6rem 0;
  text-align: center;
}

.error-code {
  font-size: 8rem;
  font-weight: 700;
  color: var(--color-border);
  line-height: 1;
}

.error-page h1 {
  font-size: 2rem;
  margin-bottom: 1rem;
}

.error-page p {
  color: var(--color-text-muted);
  margin-bottom: 2rem;
}
{% endblock %}

{% block content %}
<section class="error-page">
  <div class="container">
    <div class="error-code">500</div>
    <h1>Server Error</h1>
    <p>Something went wrong on our end. Please try again later.</p>
    <a href="/" class="btn btn-primary">Back to Home</a>
  </div>
</section>
{% endblock %}
