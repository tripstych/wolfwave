{% extends "layouts/base.njk" %}

{% block content %}
<div class="cart-container">
  <div class="cart-header">
    <h1>Shopping Cart</h1>
  </div>

  <div id="cart-content" class="cart-content">
    <div class="loading">Loading cart...</div>
  </div>
</div>

<script src="/js/cart.js"></script>
<script src="/js/cart-page.js"></script>

<style>
  .cart-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .cart-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #e5e7eb;
  }

  .cart-header h1 {
    margin: 0;
    font-size: 2rem;
  }

  .cart-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 2rem;
  }

  @media (max-width: 768px) {
    .cart-content {
      grid-template-columns: 1fr;
    }
  }

  .loading {
    grid-column: 1 / -1;
    text-align: center;
    padding: 2rem;
    color: #666;
  }

  .empty-cart {
    grid-column: 1 / -1;
    text-align: center;
    padding: 3rem;
    background: #f9fafb;
    border-radius: 8px;
  }

  .empty-cart p {
    color: #666;
    margin-bottom: 1.5rem;
  }

  .empty-cart .btn {
    display: inline-block;
  }

  .cart-items {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .cart-item {
    display: grid;
    grid-template-columns: 80px 1fr auto;
    gap: 1rem;
    padding: 1rem;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    align-items: start;
  }

  .cart-item-image {
    width: 80px;
    height: 80px;
    background: #f5f5f5;
    border-radius: 4px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .cart-item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cart-item-details h3 {
    margin: 0 0 0.25rem 0;
    font-size: 1rem;
  }

  .cart-item-variant {
    font-size: 0.875rem;
    color: #666;
    margin-bottom: 0.5rem;
  }

  .cart-item-sku {
    font-size: 0.75rem;
    color: #999;
    font-family: monospace;
  }

  .cart-item-price {
    font-weight: 600;
    color: #111;
  }

  .cart-item-controls {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .qty-input {
    width: 60px;
    padding: 0.5rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    text-align: center;
  }

  .remove-btn {
    background: #fee2e2;
    color: #dc2626;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    cursor: pointer;
    font-size: 0.875rem;
  }

  .remove-btn:hover {
    background: #fecaca;
  }

  .cart-summary {
    background: #f9fafb;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    padding: 1.5rem;
    height: fit-content;
    position: sticky;
    top: 20px;
  }

  .summary-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 1rem;
    font-size: 0.875rem;
  }

  .summary-row.total {
    border-top: 1px solid #ddd;
    padding-top: 1rem;
    margin-top: 1rem;
    font-size: 1.125rem;
    font-weight: bold;
  }

  .checkout-btn {
    width: 100%;
    padding: 0.75rem;
    background: #3b82f6;
    color: white;
    border: none;
    border-radius: 4px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    margin-top: 1.5rem;
  }

  .checkout-btn:hover:not(:disabled) {
    background: #2563eb;
  }

  .checkout-btn:disabled {
    background: #ccc;
    cursor: not-allowed;
  }

  .continue-shopping {
    text-align: center;
    margin-top: 1.5rem;
  }

  .continue-shopping a {
    color: #3b82f6;
    text-decoration: none;
  }

  .continue-shopping a:hover {
    text-decoration: underline;
  }
</style>
{% endblock %}
