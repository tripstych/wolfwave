{% extends "layouts/base.njk" %}

{% block styles %}
.page-header {
  padding: 6rem 0 4rem;
  background: var(--color-background);
}

.page-header h1 {
  font-size: 3.5rem;
  margin-bottom: 0;
  text-align: center;
}

.content-section {
  padding: 4rem 0;
  max-width: 800px;
  margin: 0 auto;
  line-height: 1.8;
  font-size: 1.125rem;
}

.mid-page-cta {
  padding: 5rem 0;
  background: var(--color-primary);
  color: white;
  text-align: center;
  margin: 2rem 0;
}

.mid-page-cta h2 {
  font-size: 2.5rem;
  color: white;
  margin-bottom: 1rem;
}

.mid-page-cta p {
  font-size: 1.25rem;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 2.5rem;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
}

.mid-page-cta .btn-cta {
  background: var(--color-background);
  color: var(--color-primary);
  font-weight: 600;
  padding: 1rem 2rem;
  border-radius: 0.5rem;
  font-size: 1.125rem;
  display: inline-block;
}

.mid-page-cta .btn-cta:hover {
  background: var(--color-surface);
}

@media (max-width: 768px) {
  .page-header h1 { font-size: 2.5rem; }
  .mid-page-cta h2 { font-size: 2rem; }
}
{% endblock %}

{% block content %}
<header class="page-header">
  <div class="container">
    <h1 data-cms-region="page_title" data-cms-type="text" data-cms-label="Page Title">
      {{ content.page_title | default(page.title) }}
    </h1>
  </div>
</header>

<section class="content-section">
  <div class="container">
    <article data-cms-region="content_top" data-cms-type="richtext" data-cms-label="Content (Top Part)">
      {{ content.content_top | safe | default("<p>The top part of your content goes here. Start with an engaging introduction.</p>") }}
    </article>
  </div>
</section>

<section class="mid-page-cta">
  <div class="container">
    <h2 data-cms-region="cta_title" data-cms-type="text" data-cms-label="CTA Title">
      {{ content.cta_title | default("Ready to take the next step?") }}
    </h2>
    <p data-cms-region="cta_subtitle" data-cms-type="textarea" data-cms-label="CTA Subtitle">
      {{ content.cta_subtitle | default("Join thousands of other users who have already improved their workflow.") }}
    </p>
    <div data-cms-region="cta_button" data-cms-type="link" data-cms-label="CTA Button">
      <a href="{{ content.cta_button.url | default('#') }}" class="btn-cta">
        {{ content.cta_button.text | default("Sign Up Now") }}
      </a>
    </div>
  </div>
</section>

<section class="content-section">
  <div class="container">
    <article data-cms-region="content_bottom" data-cms-type="richtext" data-cms-label="Content (Bottom Part)">
      {{ content.content_bottom | safe | default("<p>The remaining portion of your article or page content continues here after the call to action.</p>") }}
    </article>
  </div>
</section>
{% endblock %}

