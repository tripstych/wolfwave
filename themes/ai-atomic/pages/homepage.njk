{% extends "layouts/base.njk" %}

{% block content %}
<main class="ai-generated-theme" data-theme-engine="atomic-gen">
  
  {# 1. Hero Text Block #}
  <div class="text-block">
    {# AI injects context-specific labels and default text here #}
    <h1 data-cms-region="headline" 
        data-cms-type="text" 
        data-cms-label="Main Headline">
      {{ content.headline | default("The Future of Efficiency") }}
    </h1>
    
    <p data-cms-region="subtext" 
       data-cms-type="textarea" 
       data-cms-label="Supporting Subtext">
      {{ content.subtext | default("Automate your workflow with our generative intelligence platform.") }}
    </p>
  </div>

  {# 2. Visual / Hero Block #}
  <div class="visual-block" 
       data-cms-region="hero_image" 
       data-cms-type="image" 
       data-cms-label="Primary Visual">
    <img src="{{ content.hero_image | default('/images/placeholders/1920x600.svg') }}" 
         alt="{{ content.headline | default('Hero Illustration') }}">
  </div>

  {# 3. Feature Grid: AI can vary the number of fields in the repeater #}
  <div class="feature-grid"
       data-cms-region="feature_grid"
       data-cms-type="repeater"
       data-cms-label="Core Features"
       data-cms-fields='[
         {"name":"title","type":"text","label":"Feature Title"},
         {"name":"body","type":"textarea","label":"Feature Description"}
       ]'>
    {% for item in content.feature_grid %}
      <div class="feature-item">
        <h3>{{ item.title }}</h3>
        <p>{{ item.body }}</p>
      </div>
    {% else %}
      {# Fallback content #}
      <div class="feature-item">
        <h3>Smart Automation</h3>
        <p>Intelligent workflows that adapt to your needs.</p>
      </div>
      <div class="feature-item">
        <h3>Real-time Insights</h3>
        <p>Get data-driven decisions at the speed of light.</p>
      </div>
    {% endfor %}
  </div>

</main>
{% endblock %}
