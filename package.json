{
  "name": "wolfwave-cms",
  "version": "1.0.0",
  "description": "SEO-centric CMS with React admin and Nunjucks templates",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:admin\"",
    "dev:server": "nodemon server/index.js",
    "dev:admin": "npm run dev --prefix admin",
    "export:static": "node server/static/export.js",
    "build:admin": "npm run build --prefix admin",
    "db:migrate": "prisma db push --accept-data-loss",
    "db:reset": "prisma generate && prisma db push --force-reset --accept-data-loss",
    "db:deploy": "prisma migrate deploy && prisma generate",
    "db:generate": "prisma generate",
    "db:seed": "node server/db/seed.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "start": "pm2 start server/index.js --name wolfwave --update-env && pm2 logs wolfwave",
    "postinstall": "cd admin && npm install"
  },
  "dependencies": {
    "@prisma/client": "^6.19.2",
    "axios": "^1.13.4",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.2.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "jsonwebtoken": "^9.0.2",
    "mailersend": "^2.6.0",
    "moment": "^2.30.1",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "nunjucks": "^3.2.4",
    "pluralize": "^8.0.0",
    "pm2": "^6.0.14",
    "prisma": "^6.19.2",
    "resend": "^6.9.2",
    "slugify": "^1.6.6",
    "uuid": "^9.0.1",
    "vite": "^7.3.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4",
    "vitest": "^1.6.1"
  }
}
